<div class="flex items-center justify-center p-20">
  <%= render Elements::PopoverComponent.new(trigger_mode: :hover) do |popover| %>
    <% popover.with_trigger do %>
      <%= render Elements::ButtonComponent.new(variant: :outline) do %>
        Hover me
      <% end %>
    <% end %>

    <% popover.with_popover_content do %>
      <div class="space-y-2">
        <h4 class="font-medium leading-none">Hover Popover</h4>
        <p class="text-sm text-muted-foreground">
          This popover appears on hover.
        </p>
      </div>
    <% end %>
  <% end %>
</div>
