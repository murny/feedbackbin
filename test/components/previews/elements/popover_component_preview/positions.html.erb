<div class="flex items-center justify-center gap-8 p-20">
  <div class="flex flex-col items-center gap-2">
    <%= render Elements::PopoverComponent.new(side: :top) do |popover| %>
      <% popover.with_trigger do %>
        <%= render Elements::ButtonComponent.new(variant: :outline) do %>
          Top
        <% end %>
      <% end %>

      <% popover.with_popover_content do %>
        <div class="space-y-2">
          <h4 class="font-medium leading-none">Top Popover</h4>
          <p class="text-sm text-muted-foreground">
            This popover opens to the top.
          </p>
        </div>
      <% end %>
    <% end %>
  </div>

