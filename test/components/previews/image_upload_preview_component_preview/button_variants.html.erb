<div class="p-6 space-y-8 max-w-2xl">
  <div>
    <h3 class="text-sm font-medium mb-4">Default Button</h3>
    <%= form_with model: User.new, url: "#" do |form| %>
      <%= render ImageUploadPreviewComponent.new(
            form: form,
            field_name: :avatar,
            preview_url: asset_path("default-avatar.svg"),
            upload_button_text: "Upload Avatar",
            size_hint: "Using :default variant",
            upload_button_variant: :default) %>
    <% end %>
  </div>

