<div class="flex items-center justify-center gap-8 p-20">
  <% sides.each do |side| %>
    <div class="flex flex-col items-center gap-2">
      <%= render Ui::PopoverComponent.new(side: side) do |popover| %>
        <% popover.with_trigger do %>
          <%= render Ui::ButtonComponent.new(variant: :outline) do %>
            <%= side.to_s.titleize %>
          <% end %>
        <% end %>

        <% popover.with_content do %>
          <div class="space-y-2">
            <h4 class="font-medium leading-none"><%= side.to_s.titleize %> Popover</h4>
            <p class="text-sm text-muted-foreground">
              This popover opens to the <%= side %>.
            </p>
          </div>
        <% end %>
      <% end %>
    </div>
  <% end %>
</div>
