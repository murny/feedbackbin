<div class="flex items-center justify-center p-20">
  <%= render Ui::PopoverComponent.new(dismiss_after: 3000) do |popover| %>
    <% popover.with_trigger do %>
      <%= render Ui::ButtonComponent.new(variant: :secondary) do %>
        Auto-dismiss (3s)
      <% end %>
    <% end %>

    <% popover.with_popover_content do %>
      <div class="space-y-2">
        <h4 class="font-medium leading-none">Auto Dismiss</h4>
        <p class="text-sm text-muted-foreground">
          This popover will automatically close after 3 seconds.
        </p>
      </div>
    <% end %>
  <% end %>
</div>
