<%= render Ui::CardComponent.new(class: "border-b") do |c| %>
  <% c.with_header(title: "Account Settings", description: "Manage your account preferences") %>
  <% c.with_body do %>
    <div class="space-y-3">
      <div class="flex items-center justify-between">
        <label for="email-notifications" class="text-sm">Email notifications</label>
        <input type="checkbox" id="email-notifications" checked>
      </div>
      <div class="flex items-center justify-between">
        <label for="sms-notifications" class="text-sm">SMS notifications</label>
        <input type="checkbox" id="sms-notifications">
      </div>
    </div>
  <% end %>
  <% c.with_footer(class: "border-t pt-6") do %>
    <%= render Ui::ButtonComponent.new(variant: :default, size: :sm) do %>
      Save changes
    <% end %>
  <% end %>
<% end %>
