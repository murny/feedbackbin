<%# locals: (webhook:) %>

<li class="flex align-center justify-space-between" style="gap: var(--space-6); padding-block: var(--space-5); padding-inline: var(--space-6);">
  <div class="flex align-center min-width gap-4">
    <div class="min-width" style="flex: 1 1 auto;">
      <p class="txt-small font-weight-semibold" style="line-height: 1.5rem;">
        <%= link_to webhook.name, admin_settings_webhook_path(webhook) %>
      </p>
      <p class="txt-x-small txt-subtle overflow-ellipsis" style="margin-block-start: var(--space-1); line-height: 1.25rem;">
        <%= webhook.url %>
      </p>
      <div class="flex align-center txt-x-small txt-subtle" style="margin-block-start: var(--space-1); gap: var(--space-2); line-height: 1.25rem;">
        <% if webhook.board.present? %>
          <%= render Elements::BadgeComponent.new(variant: :outline, class: "txt-x-small") do %>
            <%= webhook.board.name %>
          <% end %>
        <% end %>
        <% if webhook.active? %>
          <%= render Elements::BadgeComponent.new(variant: :default, class: "txt-x-small", style: "background-color: oklch(0.599 0.156 163.224);") do %>
            <%= t("admin.settings.webhooks.index.active_badge") %>
          <% end %>
        <% else %>
          <%= render Elements::BadgeComponent.new(variant: :secondary, class: "txt-x-small") do %>
            <%= t("admin.settings.webhooks.index.inactive_badge") %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="flex align-center gap-4">
    <div class="flex gap-2">
      <%= link_to edit_admin_settings_webhook_path(webhook), class: "txt-small txt-subtle" do %>
        <%= lucide_icon "pencil", class: "size-5" %>
        <span class="visually-hidden"><%= t("edit") %></span>
      <% end %>
      <%= link_to admin_settings_webhook_path(webhook),
            class: "txt-small",
            style: "color: var(--color-destructive);",
            data: { "turbo-method": :delete, turbo_confirm: t("are_you_sure") } do %>
        <%= lucide_icon "trash-2", class: "size-5" %>
        <span class="visually-hidden"><%= t("delete") %></span>
      <% end %>
    </div>
  </div>
</li>
