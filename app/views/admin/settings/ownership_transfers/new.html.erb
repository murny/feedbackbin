<% content_for :title, t(".title") %>

<div class="container">
  <div class="pad-inline" style="padding-block: var(--space-8);">
    <h1 class="txt-xx-large font-weight-bold" style="margin-block-end: var(--space-4);"><%= t(".title") %></h1>

    <div style="margin-block-end: var(--space-6); padding: var(--space-4); background-color: oklch(from var(--color-warning) l c h / 10%); border-inline-start: 2px solid var(--color-warning);">
      <div class="flex align-start" style="gap: var(--space-2);">
        <%= lucide_icon "alert-triangle", style: "inline-size: 1.25rem; block-size: 1.25rem; color: var(--color-warning); margin-block-start: 0.125rem; flex-shrink: 0;" %>
        <div>
          <span class="font-weight-semibold" style="color: var(--color-warning);"><%= t(".warning_title") %></span>
          <p class="txt-small" style="margin-block-start: var(--space-1); color: var(--color-warning);"><%= t(".warning_message") %></p>
        </div>
      </div>
    </div>

    <%= render Elements::CardComponent.new do |c| %>
      <% c.with_body(style: "padding-block: var(--space-4);") do %>
        <%= form_with url: admin_settings_ownership_transfer_path, method: :post, class: "flex flex-column", style: "gap: var(--space-6);" do |f| %>
          <div style="margin-block-end: var(--space-4);">
            <%= f.label :new_owner_id, t(".new_owner"), class: "display-block txt-small font-weight-medium", style: "margin-block-end: var(--space-2);" %>
            <%= f.select :new_owner_id,
                options_from_collection_for_select(@admins, :id, :name),
                { prompt: t(".select_admin") },
                class: "form-select full-width" %>
            <p class="txt-small txt-subtle" style="margin-block-start: var(--space-1);">
              <%= t(".new_owner_help") %>
            </p>
          </div>

          <div class="flex" style="gap: var(--space-3); margin-block-start: var(--space-6);">
            <%= render Elements::ButtonComponent.new(type: :submit, variant: :default) do %>
              <%= t(".transfer_ownership") %>
            <% end %>
            <%= render Elements::ButtonComponent.new(href: admin_settings_branding_path, variant: :outline) do %>
              <%= t("cancel") %>
            <% end %>
          </div>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>
