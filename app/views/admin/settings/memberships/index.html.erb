<% content_for :title, t(".title") %>

<div class="container mx-auto max-w-4xl">
  <%= render partial: "admin/settings/header" %>

  <div class="mt-8">
    <div class="flex items-center justify-between mb-6">
      <div>
        <h2 class="text-lg font-medium"><%= t(".title") %></h2>
        <p class="text-sm text-muted-foreground"><%= t(".description") %></p>
      </div>
      <div class="whitespace-nowrap text-sm text-muted-foreground">
        <%= t(".admin_count", count: @admin_users.count) %>
      </div>
    </div>

    <% if @admin_users.any? %>
      <div class="card">
        <ul role="list" class="divide-y divide-gray-200 dark:divide-gray-700">
          <% @admin_users.each do |user| %>
            <li class="flex items-center justify-between gap-x-6 py-5 px-6">
              <div class="min-w-0">
                <div class="flex items-start gap-x-3">
                  <% if user.avatar.attached? %>
                    <%= image_tag user.avatar, alt: user.name, class: "h-10 w-10 flex-none rounded-full bg-muted" %>
                  <% else %>
                    <div class="h-10 w-10 flex-none rounded-full bg-primary text-primary-foreground flex items-center justify-center text-sm font-medium">
                      <%= user.initials %>
                    </div>
                  <% end %>
                  <div class="min-w-0 flex-auto">
                    <p class="text-sm font-semibold leading-6 text-foreground">
                      <%= user.name.presence || user.username %>
                    </p>
                    <div class="mt-1 flex items-center gap-x-2 text-xs leading-5 text-muted-foreground">
                      <p>
                        <%= user.email_address %>
                      </p>
                      <svg viewBox="0 0 2 2" class="h-0.5 w-0.5 fill-current">
                        <circle cx="1" cy="1" r="1" />
                      </svg>
                      <p>
                        @<%= user.username %>
                      </p>
                    </div>
                  </div>
                </div>
              </div>
              <div class="flex flex-none items-center gap-x-4">
                <div class="hidden sm:flex sm:flex-col sm:items-end">
                  <span class="inline-flex items-center rounded-full px-2 py-1 text-xs font-medium ring-1 ring-inset bg-blue-50 text-blue-700 ring-blue-700/10 dark:bg-blue-400/10 dark:text-blue-400 dark:ring-blue-400/30">
                    <%= lucide_icon "crown", class: "mr-1 h-3 w-3" %>
                    <%= t(".role.administrator") %>
                  </span>
                </div>
                <% unless @admin_users.count == 1 && user.administrator? %>
                  <%= link_to admin_settings_membership_path(user),
                        class: "text-sm text-destructive hover:text-destructive/80",
                        data: { "turbo-method": :delete, turbo_confirm: t(".remove_admin_confirm") } do %>
                    <%= lucide_icon "user-minus", class: "h-5 w-5" %>
                    <span class="sr-only"><%= t(".remove_admin") %></span>
                  <% end %>
                <% end %>
              </div>
            </li>
          <% end %>
        </ul>
      </div>
    <% else %>
      <div class="card p-8 text-center">
        <%= lucide_icon "crown", class: "mx-auto h-12 w-12 text-muted-foreground" %>
        <h3 class="mt-4 text-lg font-semibold text-foreground"><%= t(".no_admins_title") %></h3>
        <p class="mt-2 text-sm text-muted-foreground"><%= t(".no_admins_description") %></p>
      </div>
    <% end %>
  </div>
</div>
