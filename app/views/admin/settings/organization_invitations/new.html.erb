<% content_for :title, t(".title") %>

<div class="container mx-auto max-w-4xl">
  <%= render partial: "admin/settings/header" %>

  <div class="mt-8">
    <div class="mb-6">
      <h2 class="text-lg font-medium"><%= t(".title") %></h2>
      <p class="text-sm text-muted-foreground"><%= t(".description") %></p>
    </div>

    <%= render_card do %>
      <div class="px-6">
        <%= form_with model: @organization_invitation, url: admin_settings_organization_invitations_path, class: "space-y-6" do |form| %>
          <%= render "error_messages", resource: form.object %>

          <div class="grid gap-3">
            <%= form.label :email, class: "text-sm font-medium" %>
            <%= form.email_field :email, placeholder: t(".email_placeholder"), class: "form-input", autofocus: true %>
            <p class="text-xs text-muted-foreground"><%= t(".email_hint") %></p>
          </div>

          <div class="flex items-center justify-end gap-3 pt-4">
            <%= link_to t(".cancel"), admin_settings_memberships_path, class: "btn btn-secondary" %>
            <%= form.submit t(".send_invitation"), class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
