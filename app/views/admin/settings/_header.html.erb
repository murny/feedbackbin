<%# locals: () %>

<style>
  .settings-nav__link { color: var(--color-muted-foreground); }
  .settings-nav__link:hover { color: var(--color-foreground); }
  .settings-nav__link--active { border-block-end: 2px solid var(--color-primary); color: var(--color-primary); }
  .settings-nav__link--danger { color: var(--color-destructive); }
  .settings-nav__link--danger:hover { color: var(--color-destructive); opacity: 0.8; }
  .settings-nav__link--danger-active { border-block-end: 2px solid var(--color-destructive); color: var(--color-destructive); }
</style>

<div style="margin-block-end: var(--space-8);">
  <div class="flex align-center" style="gap: var(--space-3); margin-block-end: var(--space-2);">
    <%= link_to admin_root_path, class: "txt-small txt-subtle flex-inline align-center" do %>
      <%= lucide_icon "arrow-left", class: "size-4", style: "margin-inline-end: var(--space-2);" %>
      <%= t("layouts.admin.navigation.back_to_dashboard") %>
    <% end %>
  </div>
  <h1 class="txt-xx-large font-weight-semibold"><%= t(".title") %></h1>
  <p class="txt-subtle"><%= t(".description") %></p>
</div>

<div class="border-bottom">
  <nav class="flex overflow-x">
    <ul role="list" class="flex flex-none txt-small font-weight-medium" style="min-inline-size: 100%; gap: var(--space-8); padding-inline: 0;">
      <li>
        <%= active_link_to t(".navigation.general"), admin_settings_branding_path,
              class: "flex-inline align-center settings-nav__link",
              style: "padding-inline: var(--space-1); padding-block: var(--space-4);",
              active_class: "settings-nav__link--active" %>
      </li>
      <li>
        <%= active_link_to t(".navigation.statuses"), admin_settings_statuses_path,
              class: "flex-inline align-center settings-nav__link",
              style: "padding-inline: var(--space-1); padding-block: var(--space-4);",
              active_class: "settings-nav__link--active" %>
      </li>
      <li>
        <%= active_link_to t(".navigation.boards"), admin_settings_boards_path,
              class: "flex-inline align-center settings-nav__link",
              style: "padding-inline: var(--space-1); padding-block: var(--space-4);",
              active_class: "settings-nav__link--active" %>
      </li>
      <% if Current.user&.owner? %>
        <li>
          <%= active_link_to t(".navigation.danger_zone"), admin_settings_danger_zone_path,
                class: "flex-inline align-center settings-nav__link--danger",
                style: "padding-inline: var(--space-1); padding-block: var(--space-4);",
                active_class: "settings-nav__link--danger-active" %>
        </li>
      <% end %>
    </ul>
  </nav>
</div>
