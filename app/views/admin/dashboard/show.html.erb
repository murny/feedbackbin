<% content_for :title, Current.organization.name %>

<div class="py-10">
  <header>
    <div class="flex justify-between items-center mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <h1 class="text-3xl font-bold leading-tight tracking-tight text-foreground">
        <%= Current.organization.name %>
      </h1>
      <div class="whitespace-nowrap">
        <%#= link_to "Edit", admin_settings_path(Current.organization), class: "btn btn-secondary" %>
        <div class="inline-block">
          <%#= button_to "Destroy", Current.organization, method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "btn btn-danger" %>
        </div>
      </div>
    </div>
  </header>
</div>
