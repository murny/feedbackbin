<%# Shared sidebar navigation for admin layout %>
<div class="flex flex-item-no-shrink align-center" style="block-size: 4rem;">
  <%= link_to root_path, class: "flex align-center" do %>
    <% if local_assigns[:show_icon] %>
      <%= inline_svg_tag "mark.svg", class: "size-8 txt-primary" %>
    <% end %>
    <span class="txt-medium font-weight-bold txt-primary" style="margin-inline-start: var(--space-2);"><%= t("layouts.admin.title") %></span>
  <% end %>
</div>
<nav class="flex flex-1 flex-column">
  <ul role="list" class="flex flex-1 flex-column list-style-none" style="row-gap: 1.75rem;">
    <li>
      <ul role="list" class="list-style-none flex flex-column" style="margin-inline: calc(-1 * var(--space-2)); gap: var(--space-1);">
        <li>
          <%= active_link_to admin_root_path,
                class: "flex align-center border-radius txt-small font-weight-bold",
                style: "gap: var(--space-3); padding: var(--space-2);",
                active_class: "fill-selected",
                inactive_class: "txt-subtle" do %>
            <%= lucide_icon "layout-dashboard", class: "size-6 flex-item-no-shrink" %>
            <%= t("layouts.admin.navigation.dashboard") %>
          <% end %>
        </li>
        <li>
          <div class="txt-xx-small font-weight-bold txt-subtle" style="line-height: 1.5rem;">
            <%= t("layouts.admin.navigation.ideas_section") %>
          </div>
        </li>
        <li>
          <%= active_link_to admin_ideas_path,
                class: "flex align-center border-radius txt-small font-weight-bold",
                style: "gap: var(--space-3); padding: var(--space-2);",
                active_class: "fill-selected",
                inactive_class: "txt-subtle" do %>
            <%= lucide_icon "lightbulb", class: "size-6 flex-item-no-shrink" %>
            <%= t("layouts.admin.navigation.ideas") %>
          <% end %>
        </li>
        <li>
          <div class="flex align-center border-radius txt-small font-weight-bold txt-subtle" style="gap: var(--space-3); padding: var(--space-2); cursor: not-allowed;">
            <%= lucide_icon "map", class: "size-6 flex-item-no-shrink" %>
            <%= t("layouts.admin.navigation.roadmap") %>
            <span class="txt-xx-small fill-shade txt-subtle flex-item-justify-end" style="padding-inline: var(--space-2); padding-block: var(--space-1); border-radius: 9999px;"><%= t("layouts.admin.badges.soon") %></span>
          </div>
        </li>
        <li>
          <%= active_link_to admin_users_path,
                class: "flex align-center border-radius txt-small font-weight-bold",
                style: "gap: var(--space-3); padding: var(--space-2);",
                active_class: "fill-selected",
                inactive_class: "txt-subtle" do %>
            <%= lucide_icon "users", class: "size-6 flex-item-no-shrink" %>
            <%= t("layouts.admin.navigation.users") %>
          <% end %>
        </li>
        <li>
          <%= active_link_to admin_invitations_path,
                class: "flex align-center border-radius txt-small font-weight-bold",
                style: "gap: var(--space-3); padding: var(--space-2);",
                active_class: "fill-selected",
                inactive_class: "txt-subtle" do %>
            <%= lucide_icon "mail", class: "size-6 flex-item-no-shrink" %>
            <%= t("layouts.admin.navigation.invitations") %>
          <% end %>
        </li>
        <li>
          <div class="flex align-center border-radius txt-small font-weight-bold txt-subtle" style="gap: var(--space-3); padding: var(--space-2); cursor: not-allowed;">
            <%= lucide_icon "megaphone", class: "size-6 flex-item-no-shrink" %>
            <%= t("layouts.admin.navigation.changelog") %>
            <span class="txt-xx-small fill-shade txt-subtle flex-item-justify-end" style="padding-inline: var(--space-2); padding-block: var(--space-1); border-radius: 9999px;"><%= t("layouts.admin.badges.soon") %></span>
          </div>
        </li>
        <li>
          <div class="txt-xx-small font-weight-bold txt-subtle" style="line-height: 1.5rem; margin-block-start: var(--space-8);">
            <%= t("layouts.admin.navigation.management_section") %>
          </div>
        </li>
        <li>
          <%= active_link_to admin_settings_branding_path,
                class: "flex align-center border-radius txt-small font-weight-bold",
                style: "gap: var(--space-3); padding: var(--space-2);",
                active_class: "fill-selected",
                inactive_class: "txt-subtle" do %>
            <%= lucide_icon "settings", class: "size-6 flex-item-no-shrink" %>
            <%= t("layouts.admin.navigation.settings") %>
          <% end %>
        </li>
      </ul>
    </li>
  </ul>
</nav>
<div class="border-top" style="padding-block-start: var(--space-4);">
  <%= link_to root_path,
        class: "flex align-center border-radius txt-small font-weight-bold txt-subtle",
        style: "gap: var(--space-3); padding: var(--space-2);" do %>
    <%= lucide_icon "arrow-left", class: "size-6 flex-item-no-shrink" %>
    <%= t("layouts.admin.navigation.back_to_app") %>
  <% end %>
</div>
