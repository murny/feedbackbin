<div id="dropdown-menu-with-icons">

  <% content_for :preview_example, flush: true do %>
    <%= render_dropdown_menu(
      trigger: capture do
        concat "Account "
        concat inline_svg_tag("icons/chevron-down.svg", class: "h-4 w-4")
      end,
      trigger_button_variant: :outline,
      content: tag.div do
        concat(tag.div(class: "px-2 py-1.5 text-sm font-medium") do
          concat "My Account"
        end)
        concat(tag.div(class: "flex flex-col gap-1") do
          concat(link_to("#", class: "focus:bg-accent focus:text-accent-foreground relative flex cursor-default items-center gap-2 rounded-sm px-2 py-1.5 text-sm outline-hidden select-none", "data-dropdown-target": "menuItem") do
            concat inline_svg_tag("icons/user.svg", class: "text-muted-foreground")
            concat "Profile"
          end)
          concat(link_to("#", class: "focus:bg-accent focus:text-accent-foreground relative flex cursor-default items-center gap-2 rounded-sm px-2 py-1.5 text-sm outline-hidden select-none", "data-dropdown-target": "menuItem") do
            concat inline_svg_tag("icons/credit-card.svg", class: "text-muted-foreground")
            concat "Billing"
          end)
          concat(link_to("#", class: "focus:bg-accent focus:text-accent-foreground relative flex cursor-default items-center gap-2 rounded-sm px-2 py-1.5 text-sm outline-hidden select-none", "data-dropdown-target": "menuItem") do
            concat inline_svg_tag("icons/settings.svg", class: "text-muted-foreground")
            concat "Settings"
          end)
        end)
      end
    ) %>
  <% end %>

