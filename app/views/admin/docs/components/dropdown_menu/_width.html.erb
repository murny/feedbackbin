    concat(tag.div(class: "flex flex-col gap-1") do
      concat(link_to("This dropdown menu has a fixed width", "#", class: "focus:bg-accent focus:text-accent-foreground relative flex cursor-default items-center rounded-sm px-2 py-1.5 text-sm outline-hidden select-none", "data-dropdown-target": "menuItem"))
    end)
  end
) %>

<%%= render_dropdown_menu(
  width: "w-72", # 18rem
  trigger: "Wider Menu",
  trigger_button_variant: :outline,
  content: tag.div do
    # menu content
  end
) %>
  <% end %>

  <%= render partial: "admin/docs/shared/code_example", locals: { heading: "Custom Width", description: "Specify a custom width for the dropdown menu using Tailwind width classes." } %>
</div>
