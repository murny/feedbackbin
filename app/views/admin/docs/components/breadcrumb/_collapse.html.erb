<div id="breadcrumb-collapse">
  <% content_for :preview_example, flush: true do %>
    <div class="space-y-6">
      <div>
        <p class="text-sm font-medium mb-2">Regular breadcrumb with many items</p>
        <%= render_breadcrumb [
          { text: "Home", path: "#" },
          { text: "Products", path: "#" },
          { text: "Electronics", path: "#" },
          { text: "Computers", path: "#" },
          { text: "Laptops", path: "#" },
          { text: "MacBook Pro", path: nil }
        ] %>
      </div>

      <div>
        <p class="text-sm font-medium mb-2">Collapsed breadcrumb with ellipsis</p>
        <%= render_breadcrumb [
          { text: "Home", path: "#" },
          { text: "Products", path: "#" },
          { text: "Electronics", path: "#" },
          { text: "Computers", path: "#" },
          { text: "Laptops", path: "#" },
          { text: "MacBook Pro", path: nil }
        ], collapse: true %>
      </div>

      <div>
        <p class="text-sm font-medium mb-2">Collapsed breadcrumb with custom separator</p>
        <%= render_breadcrumb [
          { text: "Home", path: "#" },
          { text: "Products", path: "#" },
          { text: "Electronics", path: "#" },
          { text: "Computers", path: "#" },
          { text: "Laptops", path: "#" },
          { text: "MacBook Pro", path: nil }
        ], collapse: true, separator: "/" %>
      </div>
    </div>
  <% end %>

  <% content_for :code_example, flush: true do %>
