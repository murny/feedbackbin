  ) %>
<%% end %>

<%# Success variant %>
<%%= render_toast_container(id: "success-toast") do %>
  <%%= render_toast(
    title: "Success Toast",
    description: "Your action was completed successfully.",
    variant: :success
  ) %>
<%% end %>

<%# Info variant %>
<%%= render_toast_container(id: "info-toast") do %>
  <%%= render_toast(
    title: "Info Toast",
    description: "Here's some information you might find useful.",
    variant: :info
  ) %>
<%% end %>

<%# Warning variant %>
<%%= render_toast_container(id: "warning-toast") do %>
  <%%= render_toast(
    title: "Warning Toast",
    description: "Please be careful with this action.",
    variant: :warning
  ) %>
