<%= render "admin/docs/shared/page_header",
  title: "Accordion",
  breadcrumb_items: [
    { text: "Docs", path: admin_docs_path },
    { text: "Components", path: admin_docs_components_path },
    { text: "Accordion", path: nil }
  ],
  description: "A vertically stacked set of interactive headings that each reveal a section of content." %>

<%= render "admin/docs/components/accordion/base" %>
<%= render "admin/docs/components/accordion/multiple" %>
<%= render "admin/docs/components/accordion/with_partial" %>

<%= render partial: "admin/docs/shared/pagination", locals: {
  prev_path: admin_docs_components_toast_path,
  prev_text: "Toast",
  next_path: admin_docs_components_alert_path,
  next_text: "Alert"
} %>

<%= content_for :component_nav do %>
  <%= render partial: "admin/docs/shared/component_nav", locals: {
    title: "On this page",
    items: [
      { text: "Base", path: "#accordion-base" },
      { text: "Multiple Items", path: "#accordion-multiple" },
      { text: "With Complex Content", path: "#accordion-with-partial" }
    ]
  } %>
<% end %>