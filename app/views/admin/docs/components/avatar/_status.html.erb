<div id="avatar-status">

  <% content_for :preview_example, flush: true do %>
    <div class="flex flex-wrap items-center gap-6 p-6">
      <div class="flex flex-col items-center">
        <div class="mb-2">
          <span class="text-xs font-medium">Online</span>
        </div>
        <%= render_avatar src: "https://github.com/shadcn.png", alt: "@shadcn", status: :online %>
      </div>

      <div class="flex flex-col items-center">
        <div class="mb-2">
          <span class="text-xs font-medium">Away</span>
        </div>
        <%= render_avatar src: "https://github.com/leerob.png", alt: "@leerob", status: :away %>
      </div>

      <div class="flex flex-col items-center">
        <div class="mb-2">
          <span class="text-xs font-medium">Busy</span>
        </div>
        <%= render_avatar src: "https://github.com/evilrabbit.png", alt: "@evilrabbit", status: :busy %>
      </div>

      <div class="flex flex-col items-center">
        <div class="mb-2">
          <span class="text-xs font-medium">Offline</span>
        </div>
        <%= render_avatar fallback: "JD", status: :offline %>
      </div>
    </div>

    <div class="flex flex-wrap items-center gap-6 p-6">
      <div class="flex flex-col items-center">
        <div class="mb-2">
          <span class="text-xs font-medium">Different Sizes</span>
        </div>
        <div class="flex items-end gap-2">
          <%= render_avatar src: "https://github.com/shadcn.png", alt: "@shadcn", size: :sm, status: :online %>
          <%= render_avatar src: "https://github.com/shadcn.png", alt: "@shadcn", status: :online %>
          <%= render_avatar src: "https://github.com/shadcn.png", alt: "@shadcn", size: :lg, status: :online %>
          <%= render_avatar src: "https://github.com/shadcn.png", alt: "@shadcn", size: :xl, status: :online %>
        </div>
      </div>
    </div>
  <% end %>

  <% content_for :code_example, flush: true do %>
<%%= render_avatar src: "https://github.com/shadcn.png", alt: "@shadcn", status: :online %>
<%%= render_avatar src: "https://github.com/leerob.png", alt: "@leerob", status: :away %>
<%%= render_avatar src: "https://github.com/evilrabbit.png", alt: "@evilrabbit", status: :busy %>
<%%= render_avatar fallback: "JD", status: :offline %>

<!-- With different sizes -->
<%%= render_avatar src: "https://github.com/shadcn.png", alt: "@shadcn", size: :sm, status: :online %>
<%%= render_avatar src: "https://github.com/shadcn.png", alt: "@shadcn", status: :online %>
<%%= render_avatar src: "https://github.com/shadcn.png", alt: "@shadcn", size: :lg, status: :online %>
<%%= render_avatar src: "https://github.com/shadcn.png", alt: "@shadcn", size: :xl, status: :online %>
  <% end %>

  <%= render partial: "admin/docs/shared/code_example", locals: { heading: "Status Indicator" } %>
</div>
