<div id="card-layouts">
  <% content_for :preview_example, flush: true do %>
    <div class="flex flex-wrap gap-4">
      <%= render_card(
        body: "Content only card with no header or footer."
      ) %>

      <%= render_card(
        title: "Header Only",
        description: "This card has just a header with title and description."
      ) %>

      <%= render_card(
        title: "Header & Content",
        description: "This card has a header and content.",
        body: content_tag(:div, "This is the card content area.", class: "text-sm")
      ) %>

      <%= render_card(
        body: "Card with content and footer.",
        footer: content_tag(:div, "Footer content", class: "text-sm")
      ) %>

      <%= render_card(
        title: "Complete Card",
        description: "This card has header, content and footer.",
        body: content_tag(:div, "This is the main content area.", class: "text-sm"),
        footer: content_tag(:div, "Card footer", class: "text-sm")
      ) %>
    </div>
  <% end %>

