<%= render "admin/docs/shared/page_header",
  title: "Tabs",
  breadcrumb_items: [
    { text: "Docs", path: admin_docs_path },
    { text: "Components", path: admin_docs_components_path },
    { text: "Tabs", path: nil }
  ],
  description: "A tabbed interface that allows switching between different content sections." %>

<%= render "admin/docs/components/tabs/base" %>
<%= render "admin/docs/components/tabs/with_icons" %>
<%= render "admin/docs/components/tabs/disabled" %>

<%= render partial: "admin/docs/shared/pagination", locals: {
  prev_path: admin_docs_components_card_path,
  prev_text: "Card",
  next_path: admin_docs_components_toast_path,
  next_text: "Toast"
} %>

<%= content_for :component_nav do %>
  <%= render partial: "admin/docs/shared/component_nav", locals: {
    title: "On this page",
    items: [
      { text: "Base", path: "#tabs-base" },
      { text: "With Icons", path: "#tabs-with-icons" },
      { text: "Disabled", path: "#tabs-disabled" },
      { text: "Custom Styling", path: "#tabs-custom" }
    ]
  } %>
<% end %>
