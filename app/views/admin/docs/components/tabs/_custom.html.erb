<div id="tabs-custom">
  <% content_for :preview_example, flush: true do %>
    <%= render_tabs(
      items: [
        {
          value: "personal",
          label: "Personal Info",
          content: content_tag(:div, "Personal information content", class: "p-4 text-sm")
        },
        {
          value: "billing",
          label: "Billing",
