<%= turbo_frame_tag dom_id(user, "role_section") do %>
  <div class="flex items-center justify-between gap-4">
    <div class="flex flex-wrap gap-1">
      <%= render_badge(
        text: user.role.humanize,
        variant: user.administrator? ? :default : :secondary
      ) %>
      <% if user.organization_owner? %>
        <%= render_badge(
          text: t("admin.users.show.owner_badge"),
          variant: :default
        ) %>
      <% end %>
    </div>
    <%= form_with url: admin_user_role_path(user), method: :patch, class: "flex gap-2 items-center" do |form| %>
      <%= form.select :role,
          options_for_select(
            User.roles.keys.map { |role| [ role.humanize, role ] },
            user.role
          ),
          {},
          class: "select" %>
      <%= render Ui::ButtonComponent.new(
        variant: :secondary,
        size: :sm,
        type: :submit
      ) do %>
        <%= t("admin.users.show.update_button") %>
      <% end %>
    <% end %>
  </div>
<% end %>
