<%# locals: (users:, pagy:) %>

<%= render Elements::CardComponent.new(class: "overflow-hidden") do |c| %>
  <% c.with_body(class: "p-0") do %>
    <div class="overflow-x-auto">
    <table class="w-full text-sm">
      <thead class="border-b border-border">
        <tr class="bg-muted/50">
          <th class="px-6 py-4 text-left font-semibold text-foreground"><%= t(".user_column") %></th>
          <th class="px-6 py-4 text-left font-semibold text-foreground"><%= t(".role_column") %></th>
          <th class="px-6 py-4 text-left font-semibold text-foreground"><%= t(".account_status_column") %></th>
          <th class="px-6 py-4 text-left font-semibold text-foreground"><%= t(".email_status_column") %></th>
          <th class="px-6 py-4 text-left font-semibold text-foreground"><%= t(".posts_column") %></th>
          <th class="px-6 py-4 text-left font-semibold text-foreground"><%= t(".joined_column") %></th>
          <th class="px-6 py-4 text-center font-semibold text-foreground"><%= t(".actions_column") %></th>
        </tr>
      </thead>
      <tbody class="divide-y divide-border">
        <% if users.any? %>
          <% users.each do |user| %>
            <tr class="hover:bg-muted/25 transition-colors">
              <td class="px-6 py-4">
                <div class="flex items-center gap-3">
                  <%= render Elements::AvatarComponent.new(
                    src: user.avatar.attached? ? url_for(user.avatar) : nil,
                    alt: user.name,
                    size: :sm,
                    fallback: user.name[0, 2].upcase
                  ) %>
                  <div class="min-w-0">
                    <div class="font-medium text-foreground truncate">
                      <%= user.name %>
                    </div>
                    <div class="text-sm text-muted-foreground truncate">
                      <%= user.email_address %>
                    </div>
                  </div>
                </div>
              </td>
              <!-- Role Column -->
              <td class="px-6 py-4">
                <div class="flex flex-wrap gap-1">
                  <%= render Elements::BadgeComponent.new(
                    variant: user.admin? ? :default : :secondary
                  ) do %>
                    <%= user.role.humanize %>
                  <% end %>
                  <% if user.owner? %>
                    <%= render Elements::BadgeComponent.new(variant: :default) do %>
                      <%= t(".owner_badge") %>
                    <% end %>
                  <% end %>
                </div>
              </td>
              <!-- Account Status Column -->
              <td class="px-6 py-4">
                <%= render Elements::BadgeComponent.new(
                  variant: user.active? ? :default : :destructive
                ) do %>
                  <%= user.active? ? t(".active_badge") : t(".deactivated_badge") %>
                <% end %>
              </td>
              <!-- Email Status Column -->
              <td class="px-6 py-4">
                <%= render Elements::BadgeComponent.new(
                  variant: user.email_verified? ? :default : :outline
                ) do %>
                  <%= user.email_verified? ? t(".verified_badge") : t(".unverified_badge") %>
                <% end %>
              </td>
              <td class="px-6 py-4">
                <% posts_count = user.posts.count %>
                <% if posts_count > 0 %>
                  <span class="inline-flex items-center rounded-full bg-secondary px-2 py-1 text-xs font-medium text-secondary-foreground">
                    <%= pluralize(posts_count, t(".post_singular"), t(".post_plural")) %>
                  </span>
                <% else %>
                  <span class="text-muted-foreground"><%= t(".no_posts") %></span>
                <% end %>
              </td>
              <td class="px-6 py-4 text-muted-foreground">
                <div class="text-sm">
                  <%= user.created_at.strftime("%b %d, %Y") %>
                </div>
                <div class="text-xs">
                  <%= time_ago_in_words(user.created_at) %> <%= t(".ago") %>
                </div>
              </td>
              <td class="px-6 py-4 text-center">
                <%= render Elements::ButtonComponent.new(
                  href: admin_user_path(user),
                  variant: :outline,
                  size: :sm,
                  data: { turbo_frame: "_top" }
                ) do %>
                  <%= t(".view_button") %>
                <% end %>
              </td>
            </tr>
          <% end %>
        <% else %>
          <tr>
            <td colspan="7" class="px-6 py-12 text-center">
              <div class="mx-auto size-12 bg-muted rounded-full flex items-center justify-center mb-4">
                <%= lucide_icon "users", class: "size-6 text-muted-foreground" %>
              </div>
              <h3 class="text-sm font-medium text-foreground mb-2"><%= t(".no_users_title") %></h3>
              <p class="text-sm text-muted-foreground">
                <% if params[:search].present? %>
                  <%= t(".no_users_search") %>
                <% else %>
                  <%= t(".no_users_empty") %>
                <% end %>
              </p>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    </div>
  <% end %>
<% end %>

<!-- Pagination -->
<div class="mt-8">
  <%= tag.div id: ("users" if first_page?(pagy.last)), class: "space-y-4" do %>
    <div class="text-center text-sm text-muted-foreground">
      <%== pagy.info_tag %>
    </div>
    <% if pagy.last > 1 %>
      <div class="flex justify-center">
        <%== pagy.series_nav(link_extra: 'data-turbo-frame="users_content"') %>
      </div>
    <% end %>
  <% end %>
</div>
