<% content_for :title, t(".title") %>

<div class="container mx-auto max-w-2xl px-4 py-8">
  <div class="mb-8">
    <div class="flex items-center gap-3 mb-2">
      <%= link_to admin_invitations_path, class: "text-sm text-muted-foreground hover:text-foreground inline-flex items-center" do %>
        <%= lucide_icon "arrow-left", class: "mr-2 h-4 w-4" %>
        <%= t(".back_to_invitations") %>
      <% end %>
    </div>
    <h1 class="text-2xl font-semibold tracking-tight"><%= t(".title") %></h1>
    <p class="text-sm text-muted-foreground"><%= t(".description") %></p>
  </div>

  <%= render_card do %>
    <div class="p-6">
      <%= form_with model: @invitation, url: admin_invitations_path, class: "space-y-6" do |form| %>
        <%= render "error_messages", resource: form.object %>

        <div class="grid gap-3">
          <%= form.label :email, t(".email"), class: "text-sm font-medium" %>
          <%= form.email_field :email, placeholder: t(".email_placeholder"), class: "form-input", autofocus: true, required: true %>
          <p class="text-xs text-muted-foreground"><%= t(".email_hint") %></p>
        </div>

        <div class="grid gap-3">
          <%= form.label :name, t(".name"), class: "text-sm font-medium" %>
          <%= form.text_field :name, placeholder: t(".name_placeholder"), class: "form-input", required: true %>
          <p class="text-xs text-muted-foreground"><%= t(".name_hint") %></p>
        </div>

        <div class="p-4 bg-blue-50 dark:bg-blue-900/10 border border-blue-200 dark:border-blue-800 rounded-md">
          <div class="flex gap-3">
            <%= lucide_icon "info", class: "h-5 w-5 text-blue-500 flex-shrink-0 mt-0.5" %>
            <div class="text-sm space-y-1">
              <p class="text-blue-900 dark:text-blue-100"><%= t(".member_role_note") %></p>
              <p class="text-blue-700 dark:text-blue-300"><%= t(".expiration_note") %></p>
            </div>
          </div>
        </div>

        <div class="flex items-center justify-end gap-3 pt-4">
          <%= link_to t(".cancel"), admin_invitations_path, class: "btn btn-secondary" %>
          <%= form.submit t(".send_invitation"), class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
