<!-- Back to feedback link -->
<div class="container mx-auto px-4 py-4">
  <div class="max-w-4xl mx-auto">
    <%= link_to root_path, class: "inline-flex items-center gap-2 text-sm text-muted-foreground hover:text-foreground transition-colors" do %>
      <svg class="size-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
      </svg>
      Back to feedback
    <% end %>
  </div>
</div>

<!-- Main Profile Card -->
<div class="container mx-auto px-4 pb-6">
  <div class="max-w-4xl mx-auto">
    <%= render_card(class: "pt-0") do %>
      <!-- User Banner (placeholder) -->
      <div class="h-32 w-full bg-gradient-to-r from-blue-500 to-purple-600 lg:h-48"></div>

      <div data-slot="card-content" class="px-6 pb-6 pt-0">
        <!-- Avatar and Basic Info Section -->
        <div class="-mt-12 sm:-mt-16 sm:flex sm:items-end sm:space-x-5">
          <div class="flex justify-center sm:justify-start">
            <%= render_avatar(
              src: fresh_user_avatar_path(@user),
              size: :xl,
              fallback: @user.name,
              class: "ring-4 ring-background shadow-xl"
            ) %>
          </div>

          <div class="mt-6 sm:flex sm:min-w-0 sm:flex-1 sm:items-center sm:justify-end sm:space-x-6 sm:pb-1">
            <div class="mt-6 min-w-0 flex-1 text-center sm:text-left">
              <h1 class="text-2xl font-bold text-foreground"><%= @user.name %></h1>
            </div>

            <!-- Action Buttons -->
            <div class="mt-6 flex flex-col justify-stretch space-y-3 sm:flex-row sm:space-x-4 sm:space-y-0">
              <% if Current.user == @user %>
                <%= render_button(
                  variant: :outline,
                  href: user_settings_profile_path
                ) do %>
                  <svg class="size-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                  </svg>
                  Edit Profile
                <% end %>
              <% else %>
                <%= render_button(
                  variant: :outline
                ) do %>
                  <svg class="size-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z" />
                  </svg>
                  Report User
                <% end %>
              <% end %>
            </div>
          </div>
        </div>

        <!-- Bio Section -->
        <% if @user.bio.present? %>
          <div class="mt-6 text-center sm:text-left">
            <p class="text-muted-foreground"><%= @user.bio %></p>
          </div>
        <% end %>

        <!-- Details Section -->
        <div class="mt-8">
          <h3 class="text-lg font-semibold text-foreground mb-4">Details</h3>
          <dl class="grid grid-cols-1 gap-4 sm:grid-cols-3">
            <div class="flex items-center gap-3">
              <div class="p-2 bg-muted rounded-lg">
                <svg class="size-4 text-muted-foreground" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
              </div>
              <div>
                <dt class="text-sm font-medium text-muted-foreground">Email</dt>
                <dd class="text-sm text-foreground"><%= @user.email_address %></dd>
              </div>
            </div>

            <div class="flex items-center gap-3">
              <div class="p-2 bg-muted rounded-lg">
                <svg class="size-4 text-muted-foreground" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
              </div>
              <div>
                <dt class="text-sm font-medium text-muted-foreground">Phone</dt>
                <dd class="text-sm text-foreground">+1 (555) 123-4567</dd>
              </div>
            </div>

            <div class="flex items-center gap-3">
              <div class="p-2 bg-muted rounded-lg">
                <svg class="size-4 text-muted-foreground" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
              </div>
              <div>
                <dt class="text-sm font-medium text-muted-foreground">Location</dt>
                <dd class="text-sm text-foreground">San Francisco, CA</dd>
              </div>
            </div>

            <% if @user.organizations.any? %>
              <div class="flex items-center gap-3">
                <div class="p-2 bg-muted rounded-lg">
                  <svg class="size-4 text-muted-foreground" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                  </svg>
                </div>
                <div>
                  <dt class="text-sm font-medium text-muted-foreground">Company</dt>
                  <dd class="text-sm text-foreground"><%= @user.organizations.first.name %></dd>
                </div>
              </div>
            <% end %>

            <div class="flex items-center gap-3">
              <div class="p-2 bg-muted rounded-lg">
                <svg class="size-4 text-muted-foreground" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9v-9m0-9v9" />
                </svg>
              </div>
              <div>
                <dt class="text-sm font-medium text-muted-foreground">Website</dt>
                <dd class="text-sm text-foreground">sarahchen.design</dd>
              </div>
            </div>

            <div class="flex items-center gap-3">
              <div class="p-2 bg-muted rounded-lg">
                <svg class="size-4 text-muted-foreground" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                </svg>
              </div>
              <div>
                <dt class="text-sm font-medium text-muted-foreground">Twitter</dt>
                <dd class="text-sm text-foreground">@sarahchen</dd>
              </div>
            </div>

            <div class="flex items-center gap-3">
              <div class="p-2 bg-muted rounded-lg">
                <svg class="size-4 text-muted-foreground" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2-2v2m8 0V6a2 2 0 012 2v6a2 2 0 01-2 2H6a2 2 0 01-2-2V8a2 2 0 012-2V6" />
                </svg>
              </div>
              <div>
                <dt class="text-sm font-medium text-muted-foreground">LinkedIn</dt>
                <dd class="text-sm text-foreground">sarahchen</dd>
              </div>
            </div>

            <div class="flex items-center gap-3">
              <div class="p-2 bg-muted rounded-lg">
                <svg class="size-4 text-muted-foreground" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                </svg>
              </div>
              <div>
                <dt class="text-sm font-medium text-muted-foreground">GitHub</dt>
                <dd class="text-sm text-foreground">@sarahchen</dd>
              </div>
            </div>

            <div class="flex items-center gap-3">
              <div class="p-2 bg-muted rounded-lg">
                <svg class="size-4 text-muted-foreground" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
              </div>
              <div>
                <dt class="text-sm font-medium text-muted-foreground">Joined</dt>
                <dd class="text-sm text-foreground"><%= local_datetime_tag @user.created_at, style: :relative %></dd>
              </div>
            </div>
          </dl>
        </div>

        <!-- Achievements Section -->
        <div class="mt-8">
          <h3 class="text-lg font-semibold text-foreground mb-4">Achievements</h3>
          <div class="flex flex-wrap gap-2">
            <%= render_badge(text: "🏆 Top Contributor", variant: :default) %>
            <%= render_badge(text: "👍 Helpful", variant: :secondary) %>
            <%= render_badge(text: "🚀 Early Adopter", variant: :outline) %>
          </div>
        </div>

        <!-- Stats Section -->
        <div class="mt-8">
          <div class="grid grid-cols-2 gap-6 sm:grid-cols-4">
            <div class="text-center">
              <div class="text-3xl font-bold text-foreground"><%= @posts.count %></div>
              <div class="text-sm text-muted-foreground">Posts Created</div>
            </div>
            <div class="text-center">
              <div class="text-3xl font-bold text-foreground"><%= @posts.sum { |p| p.likes_count || 0 } %></div>
              <div class="text-sm text-muted-foreground">Total Votes</div>
            </div>
            <div class="text-center">
              <div class="text-3xl font-bold text-foreground"><%= @comments.count %></div>
              <div class="text-sm text-muted-foreground">Comments</div>
            </div>
            <div class="text-center">
              <div class="text-3xl font-bold text-foreground"><%= @comments.sum { |c| c.likes_count || 0 } %></div>
              <div class="text-sm text-muted-foreground">Helpful Votes</div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<!-- Activity Tabs Section -->
<div class="container mx-auto px-4 pb-6">
  <div class="max-w-4xl mx-auto">
    <%= render_card do %>
      <div data-slot="card-content" class="p-6">
        <%= render_tabs(
          items: [
            {
              value: "posts",
              label: "📄 Posts (#{@posts.count})",
              content: render("users/posts_tab", posts: @posts)
            },
            {
              value: "comments",
              label: "💬 Comments (#{@comments.count})",
              content: render("users/comments_tab", comments: @comments)
            },
            {
              value: "likes",
              label: "❤️ Likes (#{@likes.count})",
              content: render("users/likes_tab", likes: @likes)
            }
          ],
          index_value: 0
        ) %>
      </div>
    <% end %>
  </div>
</div>
