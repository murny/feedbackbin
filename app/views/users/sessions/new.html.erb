<% content_for(:title) { t(".sign_in") } %>

<div class="flex min-h-full flex-col justify-center px-6 py-12 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-sm">
    <h1 class="mt-10 text-center text-2xl font-bold leading-9 tracking-tight text-gray-900 dark:text-white">
      <%= t(".sign_in_to_your_account") %>
    </h1>
  </div>

  <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
    <%= form_with url: users_session_path, class: "space-y-6" do |form| %>
      <div>
        <%= form.label :email_address %>
        <%= form.email_field :email_address,
              required: true,
              autofocus: true,
              autocomplete: "email",
              placeholder: t(".email_address_placeholder"),
              value: params[:email_address] %>
      </div>

      <div>
        <div class="flex items-center justify-between">
          <%= form.label :password %>
          <div class="text-sm">
            <%= link_to t(".forgot_your_password"), new_users_password_reset_path, class: "font-semibold text-blue-600 hover:text-blue-500 dark:text-blue-400 dark:hover:text-blue-300" %>
          </div>
        </div>
        <%= form.password_field :password,
              required: true,
              autocomplete: "current-password",
              placeholder: t(".password_placeholder"),
              maxlength: 72 %>
      </div>

      <div>
        <%= form.submit t(".sign_in"), class: "btn btn-primary btn-block" %>
      </div>
   <% end %>


          <%= link_to new_user_sessions_passwordless_path, class: "btn-secondary flex w-full items-center justify-center gap-3" do %>
            <%= inline_svg_tag "icons/outline/sparkles.svg", class: "h-5 w-5" %>
            <span class="text-sm font-semibold leading-6"><%= t(".sign_in_with_provider", provider: "Magic Link") %></span>
          <% end %>

          <% if Rails.env.local? %>
            <%= button_to "/auth/developer",
                  method: :post,
                  data: {turbo: false},
                  class: "flex items-center justify-center gap-3 w-full btn-secondary" do %>
              <%= inline_svg_tag "icons/outline/user_circle.svg", class: "h-5 w-5" %>

              <span class="text-sm font-semibold leading-6"><%= t(".sign_in_with_provider", provider: "Developer") %></span>
            <% end %>
          <% end %>

          <%= button_to "/auth/google",
                method: :post,
                data: {turbo: false},
                class: "flex items-center justify-center gap-3 w-full btn-secondary" do %>
            <%= inline_svg_tag "icons/brand/google.svg", class: "h-5 w-5" %>

            <span class="text-sm font-semibold leading-6"><%= t(".sign_in_with_provider", provider: "Google") %></span>
          <% end %>

          <%= button_to "/auth/facebook",
                method: :post,
                data: {turbo: false},
                class: "flex items-center justify-center gap-3 w-full btn-secondary" do %>
            <%= inline_svg_tag "icons/brand/facebook.svg", class: "h-5 w-5" %>
            <span class="text-sm font-semibold leading-6"><%= t(".sign_in_with_provider", provider: "Facebook") %></span>
          <% end %>

          <%= button_to "/auth/apple",
                method: :post,
                data: {turbo: false},
                class: "flex items-center justify-center gap-3 w-full btn-secondary" do %>
            <%= inline_svg_tag "icons/brand/apple.svg", class: "h-5 w-5" %>
            <span class="text-sm font-semibold leading-6"><%= t(".sign_in_with_provider", provider: "Apple") %></span>
          <% end %>

    <p class="mt-10 text-center text-sm text-gray-500 dark:text-gray-400">
      <%= t(".need_an_account") %>
      <%= link_to t(".sign_up"), sign_up_path, class: "font-semibold leading-6 text-blue-600 hover:text-blue-500 dark:text-blue-400 dark:hover:text-blue-300" %>
    </p>
  </div>
</div>
