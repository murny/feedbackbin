<% content_for(:title) { t(".sign_in") } %>

<div class="flex min-h-full flex-col justify-center px-6 py-12 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-sm">
    <h1 class="mt-10 text-center text-2xl font-bold leading-9 tracking-tight text-gray-900 dark:text-white">
      <%= t(".sign_in_to_your_account") %>
    </h1>
  </div>

  <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
    <%= form_with url: users_session_path, class: "space-y-6" do |form| %>
      <div>
        <%= form.label :email_address, class: "form-label" %>
        <div class="mt-2">
          <%= form.email_field :email_address,
                required: true,
                autofocus: true,
                autocomplete: "email",
                placeholder: t(".email_address_placeholder"),
                value: params[:email_address],
                class: "form-input" %>
        </div>
      </div>

      <div>
        <div class="flex items-center justify-between">
          <%= form.label :password, class: "form-label" %>
          <div class="text-sm">
            <%= link_to t(".forgot_your_password"), new_users_password_reset_path, class: "font-semibold text-indigo-600 hover:text-indigo-500 dark:text-indigo-400 dark:hover:text-indigo-300" %>
          </div>
        </div>
        <div class="mt-2">
          <%= form.password_field :password,
                required: true,
                autocomplete: "current-password",
                placeholder: t(".password_placeholder"),
                maxlength: 72,
                class: "form-input" %>
        </div>
      </div>

      <div>
        <%= form.submit t(".sign_in"), class: "btn btn-primary btn-block" %>
      </div>
   <% end %>

    <p class="mt-10 text-center text-sm text-gray-500 dark:text-gray-400">
      <%= t(".need_an_account") %>
      <%= link_to t(".sign_up"), sign_up_path, class: "font-semibold leading-6 text-indigo-600 hover:text-indigo-500 dark:text-indigo-400 dark:hover:text-indigo-300" %>
    </p>
  </div>
</div>
