<% content_for(:title) { t(".sign_in_with_magic_link") } %>

<div class="flex min-h-svh flex-col items-center justify-center gap-6 p-6 md:p-10">
  <div class="flex w-full max-w-sm flex-col gap-6">
    <%= link_to root_path, class: "flex items-center gap-2 self-center font-medium" do %>
      <%= inline_svg_tag "mark.svg", class: "h-8 w-8 text-blue-500" %>
      <span class="font-bold text-blue-500"><%= t(".brand_name") %></span>
    <% end %>

    <div class="card flex flex-col gap-6 py-6">
      <header class="px-6 text-center space-y-1.5">
        <h1 class="font-semibold text-xl"><%= t(".title") %></h1>
        <p class="text-muted-foreground text-sm"><%= t(".subtitle") %></p>
      </header>

      <div class="px-6 grid gap-6">
        <%= form_with url: magic_session_path, class: "grid gap-6" do |form| %>
          <div class="grid gap-3">
            <%= form.label :email_address, t(".email"), class: "text-sm font-medium leading-none" %>
            <%= form.email_field :email_address,
                  required: true,
                  autofocus: true,
                  autocomplete: "email",
                  placeholder: t(".email_placeholder"),
                  value: params[:email_address] %>
          </div>

          <%= form.submit t(".send_magic_link"), class: "btn w-full" %>
        <% end %>

        <p class="text-center text-sm">
          <%= t(".prefer_password") %>
          <%= link_to t(".sign_in_with_password"), sign_in_path, class: "underline underline-offset-4" %>
        </p>
      </div>
    </div>

    <p class="text-muted-foreground text-center text-xs text-balance">
      <%= t(".terms_agreement_html",
            terms_link: link_to(t(".terms_of_service"), terms_path, class: "hover:text-primary underline underline-offset-4"),
            privacy_link: link_to(t(".privacy_policy"), privacy_path, class: "hover:text-primary underline underline-offset-4")) %>
    </p>
  </div>
</div>
