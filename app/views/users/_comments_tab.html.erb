<% if comments.any? %>
  <div class="space-y-4">
    <% comments.each do |comment| %>
      <div class="border rounded-lg p-4 hover:shadow-sm transition-shadow">
        <div class="flex items-start justify-between">
          <div class="flex-1 min-w-0 space-y-2">
            <div class="flex items-center gap-2">
              <% if comment.post.category %>
                <%= render_badge(text: comment.post.category.name, variant: :outline) %>
              <% end %>
              <% if comment.post.post_status %>
                <span class="text-xs text-muted-foreground"><%= comment.post.post_status.name %></span>
              <% end %>
            </div>
            <h3 class="font-medium text-foreground">
              <%= link_to comment_path(comment),
                  class: "hover:text-primary transition-colors" do %>
                <span class="text-muted-foreground text-sm">Commented on</span> <%= comment.post.title %>
              <% end %>
            </h3>
            <p class="text-sm text-muted-foreground line-clamp-3">
              <%= truncate(comment.body.to_plain_text, length: 150) %>
            </p>
            <div class="flex items-center gap-4 text-xs text-muted-foreground">
              <% if comment.parent %>
                <span>Reply to <%= comment.parent.creator.name %></span>
              <% end %>
              <span><%= local_datetime_tag comment.created_at, style: :relative %></span>
            </div>
          </div>
          <div class="flex items-center gap-4 text-sm text-muted-foreground">
            <div class="flex items-center gap-1">
              <span>üëç</span>
              <span><%= comment.likes_count || 0 %></span>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <div class="text-center py-12 text-muted-foreground">
    <div class="mb-4">
      <svg class="mx-auto h-12 w-12 text-muted-foreground/50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
      </svg>
    </div>
    <p class="text-sm">No comments yet.</p>
  </div>
<% end %>
