<% content_for(:title) { t(".check_your_email") } %>

<div class="mx-auto w-full max-w-sm flex flex-col gap-6">
  <%= render "shared/auth_branding" %>

  <div class="card flex flex-col gap-6 py-6">
    <header class="px-6 text-center space-y-1.5">
      <div class="mx-auto w-12 h-12 rounded-full bg-primary/10 flex items-center justify-center mb-4">
        <%= lucide_icon "mail", class: "h-6 w-6 text-primary" %>
      </div>
      <h1 class="font-semibold text-xl"><%= t(".check_your_email") %></h1>
      <p class="text-muted-foreground text-sm"><%= t(".verification_instructions") %></p>
    </header>

    <div class="px-6 grid gap-4">
      <p class="text-sm text-center text-muted-foreground">
        <%= t(".didnt_receive_email") %>
      </p>
      <div class="flex justify-center">
        <%= link_to t(".sign_in"), sign_in_path, class: "btn btn--outline w-full" %>
      </div>
    </div>
  </div>
</div>
