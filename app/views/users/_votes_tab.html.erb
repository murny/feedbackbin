<% if votes.any? %>
  <ul class="space-y-6">
    <% votes.each do |vote| %>
      <li class="card hover:shadow-xl hover:border-primary/20">
        <div class="px-4 md:px-6">
          <div class="flex gap-3 md:gap-4">
            <%= render partial: "votes/vote_button", locals: { voteable: vote.voteable } %>
            <div class="grow lg:flex items-center justify-between gap-5 lg:gap-6">
              <div>
                <div class="mb-2">
                  <div class="flex items-center gap-2 mb-1">
                    <h2 class="flex-1">
                      <% if vote.voteable_type == "Idea" %>
                        <%= link_to vote.voteable.title, idea_path(vote.voteable), class: "scroll-m-20 text-xl font-semibold tracking-tight hover:underline cursor-pointer line-clamp-2" %>
                      <% else %>
                        <%= link_to comment_path(vote.voteable), class: "scroll-m-20 text-xl font-semibold tracking-tight hover:underline cursor-pointer line-clamp-2" do %>
                          <span class="text-muted-foreground text-sm font-normal"><%= t(".comment_on") %></span> <%= vote.voteable.idea.title %>
                        <% end %>
                      <% end %>
                    </h2>
                    <% if vote.voteable.respond_to?(:board) && vote.voteable.board %>
                      <%= render Elements::BadgeComponent.new(variant: :outline) do %>
                        <%= vote.voteable.board.name %>
                      <% end %>
                    <% elsif vote.voteable.respond_to?(:idea) && vote.voteable.idea.board %>
                      <%= render Elements::BadgeComponent.new(variant: :outline) do %>
                        <%= vote.voteable.idea.board.name %>
                      <% end %>
                    <% end %>
                  </div>
                  <div class="mt-1 flex items-center gap-x-2 text-xs/5">
                    <p>
                      <%= link_to vote.voteable.creator.name, vote.voteable.creator, class: "hover:underline" %>
                    </p>
                    <%= lucide_icon "dot" %>
                    <p>
                      <%= local_datetime_tag vote.voteable.created_at, style: :datetime %>
                    </p>
                    <%= lucide_icon "dot" %>
                    <p><%= t(".voted") %> <%= local_datetime_tag vote.created_at, style: :relative %></p>
                  </div>
                  <p class="mt-2 text-muted-foreground text-sm">
                    <%= truncate(strip_tags(vote.voteable.body.to_s), length: 140) %>
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
<% else %>
  <div class="text-center py-12 text-muted-foreground">
    <div class="mb-4">
      <%= lucide_icon "heart", class: "mx-auto h-12 w-12 text-muted-foreground/50" %>
    </div>
    <p class="text-sm"><%= t(".empty_votes") %></p>
  </div>
<% end %>
