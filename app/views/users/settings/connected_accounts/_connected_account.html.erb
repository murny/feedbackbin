<div class="flex border-top align-middle py-4">
  <div class="flex-1">
    <%= image_tag connected_account.image_url, class: "inline-block h-10 w-10 rounded shadow mr-2" %>
    <div class="inline-block align-middle">
      <div><%= connected_account.name %></div>
      <div class="font-semibold text-sm text-gray-700"><%= connected_account.provider_name %></div>
    </div>
  </div>
  <%= button_to user_connected_account_path(connected_account), method: :delete, class: "btn btn-link text-gray-700" do %>
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" fill="currentColor" class="w-4 h-4 mr-1">
      <path d="M5.28 4.22a.75.75 0 0 0-1.06 1.06L6.94 8l-2.72 2.72a.75.75 0 1 0 1.06 1.06L8 9.06l2.72 2.72a.75.75 0 1 0 1.06-1.06L9.06 8l2.72-2.72a.75.75 0 0 0-1.06-1.06L8 6.94 5.28 4.22Z" />
    </svg>
    <%= t(".remove") %>
  <% end %>
</div>
