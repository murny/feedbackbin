<%= form_with(model: current_user, url: users_settings_profile_path, method: :patch,
      data: { controller: "form", action: "keydown.enter->form#submit:prevent" }, class: 'mt-10') do |form| %>
  <div class="space-y-12">
    <div class="border-b border-gray-900/10 dark:border-white/10 pb-12">
      <h2 class="text-base font-semibold leading-7 text-gray-900 dark:text-white">Profile</h2>
      <p class="mt-1 text-sm leading-6 text-gray-600 dark:text-gray-400">This information will be displayed publicly so be careful what you share.</p>

      <div class="mt-10 grid grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6">
        <div class="col-span-full">
          <%= form.label :avatar, class: "form-label" %>
          <div class="mt-2 flex items-center gap-x-3">
            <svg class="h-12 w-12 text-gray-300 dark:text-gray-500" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
              <path fill-rule="evenodd" d="M18.685 19.097A9.723 9.723 0 0021.75 12c0-5.385-4.365-9.75-9.75-9.75S2.25 6.615 2.25 12a9.723 9.723 0 003.065 7.097A9.716 9.716 0 0012 21.75a9.716 9.716 0 006.685-2.653zm-12.54-1.285A7.486 7.486 0 0112 15a7.486 7.486 0 015.855 2.812A8.224 8.224 0 0112 20.25a8.224 8.224 0 01-5.855-2.438zM15.75 9a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0z" clip-rule="evenodd" />
            </svg>
            <button type="button" class="btn btn-secondary">Change</button>
          </div>
        </div>

        <div class="sm:col-span-4">
           <%= form.label :username, class: "form-label" %>
          <div class="mt-2">
            <div class="flex rounded-md dark:bg-white/5 shadow-sm ring-1 ring-inset ring-gray-300 dark:ring-white/10 focus-within:ring-2 focus-within:ring-inset focus-within:ring-indigo-600 dark:focus-within:ring-indigo-500 sm:max-w-md">
              <span class="flex select-none items-center pl-3 text-gray-500 sm:text-sm">feedbackbin.com/users/</span>
              <input type="text" name="username" id="username" autocomplete="username" class="block flex-1 border-0 bg-transparent py-1.5 pl-1 text-gray-900 dark:text-white placeholder:text-gray-400 dark:placeholder:text-gray-500 focus:ring-0 sm:text-sm sm:leading-6" placeholder="janesmith">
            </div>
          </div>
        </div>

        <div class="sm:col-span-4">
          <%= form.label :name, class: "form-label" %>
          <div class="mt-2">
            <%= form.text_field :name, autocomplete: "name", class: "form-input"  %>
          </div>
        </div>

        <div class="col-span-full">
          <%= form.label :bio, class: "form-label" %>
          <div class="mt-2">
            <%= form.text_area :bio, row: 3, class: "form-input" %>
          </div>
          <p class="mt-3 text-sm leading-6 text-gray-600 dark:text-gray-400">Write a few sentences about yourself.</p>
        </div>
      </div>
    </div>
  </div>

  <div class="mt-6 flex items-center justify-end gap-x-6">
    <button type="button" class="btn btn-secondary">Cancel</button>
    <%= form.submit "Save", class: "btn btn-primary" %>
  </div>
<% end %>