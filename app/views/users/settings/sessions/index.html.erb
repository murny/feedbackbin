<div class="container mt-8">
  <h1 class="text-center mb-8">Devices & Sessions</h1>

  <div id="sessions">
    <% @sessions.each do |session| %>
      <%= tag.div id: dom_id(session) do %>
        <div class="flex items-center gap-4">
          <div class="flex flex-col gap-4">
            <div class="div">
              <strong>User Agent:</strong>
              <%= session.user_agent %>
            </div>

            <div>
              <strong>Ip Address:</strong>
              <%= session.ip_address %>
            </div>
            <div>
              <strong>Created at:</strong>
              <%= l(session.created_at.to_date, default: "", format: :long) %>
            </div>
          </div>
          <%= button_to "Log out", users_session_path, method: :delete %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
