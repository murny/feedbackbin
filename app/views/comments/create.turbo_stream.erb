<% if @comment.persisted? %>
  <%= turbo_stream.update "flash_toast", partial: "flash_toast" %>

  <% if @comment.parent %>
    <% is_reply_to_reply = @source_comment && @source_comment != @comment.parent %>
    <% mention = is_reply_to_reply ? @source_comment.creator : nil %>
    <% source = @source_comment || @comment.parent %>

    <%= turbo_stream.replace "#{dom_id(source)}_reply_section" do %>
      <%= render partial: "comments/reply_section", locals: { source_comment: source, parent: @comment.parent, mention: mention } %>
    <% end %>

    <%= turbo_stream.append "#{dom_id(@comment.parent)}_replies" do %>
      <%= render partial: "comments/reply", locals: { comment: @comment } %>
    <% end %>
  <% else %>
    <%= turbo_stream.replace "idea_comment_form" do %>
      <%= render partial: "comments/form", locals: { idea: @comment.idea, comment: Comment.new } %>
    <% end %>

    <%= turbo_stream.append "idea_#{@comment.idea.id}_comments" do %>
      <%= render partial: "comments/comment", locals: { comment: @comment } %>
    <% end %>
  <% end %>
<% else %>
  <% if @comment.parent %>
    <% is_reply_to_reply = @source_comment && @source_comment != @comment.parent %>
    <% mention = is_reply_to_reply ? @source_comment.creator : nil %>
    <% source = @source_comment || @comment.parent %>

    <%= turbo_stream.replace "#{dom_id(source)}_reply_section" do %>
      <%= render partial: "comments/reply_section", locals: { source_comment: source, parent: @comment.parent, comment: @comment, mention: mention, show_form: true } %>
    <% end %>
  <% else %>
    <%= turbo_stream.replace "idea_comment_form" do %>
      <%= render partial: "comments/form", locals: { idea: @comment.idea, comment: @comment } %>
    <% end %>
  <% end %>
<% end %>
