<% if @comment.persisted? %>
  <%= turbo_stream.update "flash_toast", partial: "flash_toast" %>

  <% if @comment.parent %>
    <%# Reply created - append to replies list and reset the form %>
    <%= turbo_stream.append "#{dom_id(@comment.parent)}_replies" do %>
      <%= render partial: "comments/reply", locals: { reply: @comment } %>
    <% end %>

    <%= turbo_stream.replace "#{dom_id(@comment.parent)}_reply_form" do %>
      <div id="<%= dom_id(@comment.parent) %>_reply_form" class="pad">
        <%= render partial: "comments/thread_reply_form", locals: { parent: @comment.parent } %>
      </div>
    <% end %>
  <% else %>
    <%# Top-level comment created %>
    <%= turbo_stream.replace "idea_comment_form" do %>
      <%= render partial: "comments/form", locals: { idea: @comment.idea, comment: Comment.new } %>
    <% end %>

    <%= turbo_stream.append "idea_#{@comment.idea.id}_comments" do %>
      <%= render partial: "comments/comment", locals: { comment: @comment } %>
    <% end %>
  <% end %>
<% else %>
  <%# Validation failed - re-render form with errors %>
  <% if @comment.parent %>
    <%= turbo_stream.replace "#{dom_id(@comment.parent)}_reply_form" do %>
      <div id="<%= dom_id(@comment.parent) %>_reply_form" class="pad">
        <%= render partial: "comments/thread_reply_form", locals: { parent: @comment.parent, comment: @comment } %>
      </div>
    <% end %>
  <% else %>
    <%= turbo_stream.replace "idea_comment_form" do %>
      <%= render partial: "comments/form", locals: { idea: @comment.idea, comment: @comment } %>
    <% end %>
  <% end %>
<% end %>
