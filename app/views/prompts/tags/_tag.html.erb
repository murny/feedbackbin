<lexxy-prompt-item search="<%= tag.name %>" sgid="<%= tag.attachable_sgid %>">
  <template type="menu">
    <span class="inline-flex items-center gap-1.5">
      <span class="h-3 w-3 rounded-full" style="background-color: <%= tag.color %>;"></span>
      <%= tag.name %>
    </span>
  </template>
  <template type="editor">
    <span class="inline-flex items-center rounded-full px-1.5 py-0.5 text-xs font-medium" style="background-color: <%= tag.color %>20; color: <%= tag.color %>;">
      #<%= tag.name %>
    </span>
  </template>
</lexxy-prompt-item>
