<lexxy-prompt-item search="<%= "#{user.name} #{"me" if user == Current.user}" %>" sgid="<%= user.attachable_sgid %>">
  <template type="menu">
    <%= image_tag fresh_user_avatar_path(user), alt: user.name, class: "h-6 w-6 rounded-full" %>
    <%= user.name %>
  </template>
  <template type="editor">
    <%= image_tag fresh_user_avatar_path(user), alt: user.name, class: "h-4 w-4 rounded-full" %>
    <%= user.first_name %>
  </template>
</lexxy-prompt-item>
