) %>

<%%= render_popover(
  trigger: render_button(text: "Left", variant: :outline),
  side: :left,
  content: "This popover appears to the left of the trigger."
) %>

<%%= render_popover(
  trigger: render_button(text: "Start Align", variant: :outline),
  align: :start,
  content: "This popover is aligned to the start."
) %>

<%%= render_popover(
  trigger: render_button(text: "Center Align", variant: :outline),
  align: :center,
