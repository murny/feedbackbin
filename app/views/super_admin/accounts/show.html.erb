<% content_for :title, @account.name %>

<div class="space-y-8">
  <!-- Header Section -->
  <div class="flex flex-col gap-4 sm:flex-row sm:items-center sm:justify-between">
    <div class="space-y-1">
      <h1 class="text-3xl font-bold tracking-tight text-foreground">
        <%= @account.name %>
      </h1>
      <p class="text-muted-foreground">
        <%= t(".description") %>
      </p>
    </div>
    <%= render Elements::ButtonComponent.new(
      href: super_admin_accounts_path,
      variant: :outline
    ) do %>
      <%= t(".back_button") %>
    <% end %>
  </div>

  <!-- Account Info -->
  <%= render Elements::CardComponent.new do |c| %>
    <% c.with_header(title: t(".account_information")) %>
    <% c.with_body do %>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div class="space-y-4">
        <div class="flex items-center gap-4">
          <%= account_logo(@account, size: :lg) %>
          <div>
            <h3 class="text-lg font-semibold text-foreground"><%= @account.name %></h3>
            <p class="text-sm text-muted-foreground">Created <%= time_ago_in_words(@account.created_at) %> ago</p>
          </div>
        </div>
      </div>

      <div class="space-y-4">
        <div>
          <h4 class="text-sm font-medium text-foreground mb-2"><%= t(".subdomain") %></h4>
          <div class="text-sm text-muted-foreground font-mono">
            <%= @account.subdomain %>
          </div>
        </div>
        <div>
          <h4 class="text-sm font-medium text-foreground mb-2"><%= t(".created") %></h4>
          <div class="text-sm text-muted-foreground">
            <%= @account.created_at.strftime("%B %d, %Y at %I:%M %p") %>
          </div>
        </div>
      </div>
      </div>
    <% end %>
  <% end %>
</div>
