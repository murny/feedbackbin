<%# locals: (idea:) %>

<%= form_with(model: idea, class: "form form--stack") do |form| %>
  <%= render "error_messages", resource: form.object %>

  <div class="form__group form__group--spacious">
    <%= form.label :board_id, t("board") %>
    <%= form.select :board_id,
        options_from_collection_for_select(@boards, :id, :name, idea.board_id),
        { prompt: t("select_board") },
        { class: "select" } %>
  </div>

  <div class="form__group form__group--spacious">
    <%= form.label :title %>
    <%= form.text_field :title, autofocus: true, placeholder: t(".title_placeholder") %>
  </div>

  <div class="form__group form__group--spacious">
    <%= form.label :description %>
    <div class="panel panel--compact panel--flush panel--flat panel--clip">
      <%= form.rich_text_area :description, placeholder: t(".description_placeholder") do %>
        <%= rich_text_prompts %>
      <% end %>
    </div>
  </div>

  <div class="form__actions form__actions--end form__actions--spacious form__actions--offset-sm">
    <% if form.object.new_record? %>
      <%= link_to t("cancel"), ideas_path, class: "btn btn--secondary" %>
    <% else %>
      <%= link_to t("cancel"), idea_path(@idea), class: "btn btn--secondary" %>
    <% end %>

    <%= form.submit class: "btn" %>
  </div>
<% end %>
