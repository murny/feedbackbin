<%# locals: () %>

<div class="mb-8">
  <h1 class="text-2xl font-semibold tracking-tight"><%= t("user_settings.settings_title") %></h1>
  <p class="text-muted-foreground"><%= t("user_settings.settings_description") %></p>
</div>

<div class="border-b border-border">
  <nav class="flex overflow-x-auto">
    <ul role="list" class="flex min-w-full flex-none gap-x-8 px-0 text-sm font-medium">
      <li>
        <%= active_link_to t("user_settings.header.public_profile"), user_settings_profile_path,
              class: "inline-flex items-center px-1 pt-4 pb-4 text-muted-foreground hover:text-foreground transition-colors",
              active_class: "border-b-2 border-primary text-primary" %>
      </li>
      <li>
        <%= active_link_to t("user_settings.header.account"), user_settings_account_path,
              class: "inline-flex items-center px-1 pt-4 pb-4 text-muted-foreground hover:text-foreground transition-colors",
              active_class: "border-b-2 border-primary text-primary" %>
      </li>
      <li>
        <%= active_link_to t("user_settings.header.password"), user_settings_password_path,
              class: "inline-flex items-center px-1 pt-4 pb-4 text-muted-foreground hover:text-foreground transition-colors",
              active_class: "border-b-2 border-primary text-primary" %>
      </li>
      <li>
        <%= active_link_to t("user_settings.header.preferences"), user_settings_preferences_path,
              class: "inline-flex items-center px-1 pt-4 pb-4 text-muted-foreground hover:text-foreground transition-colors",
              active_class: "border-b-2 border-primary text-primary" %>
      </li>
      <li>
        <%= active_link_to t("user_settings.header.active_sessions"), user_settings_active_sessions_path,
              class: "inline-flex items-center px-1 pt-4 pb-4 text-muted-foreground hover:text-foreground transition-colors",
              active_class: "border-b-2 border-primary text-primary" %>
      </li>
    </ul>
  </nav>
</div>
