<% content_for(:title) { t("user_settings.page_titles.password") } %>

<div class="container mx-auto max-w-4xl">
  <%= render partial: "user_settings/header" %>

  <div class="mt-8">
    <div class="card p-6">
      <div class="space-y-6">
        <div>
          <h2 class="text-lg font-medium"><%= t(".change_password") %></h2>
          <p class="text-sm text-muted-foreground"><%= t(".change_password_description") %></p>
        </div>

        <%= form_with(model: @user,
              url: user_settings_password_path,
              method: :patch,
              data: { controller: "form", action: "keydown.enter->form#submit:prevent" }) do |form| %>
          <div class="grid gap-4">
            <div class="grid gap-2">
              <%= form.label :password_challenge, t(".current_password"), class: "text-sm font-medium" %>
              <%= form.password_field :password_challenge, autocomplete: "current-password", required: true, class: "w-full" %>
              <p class="text-xs text-muted-foreground"><%= t(".current_password_hint") %></p>
            </div>

            <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
              <div class="grid gap-2">
                <%= form.label :password, t(".new_password"), class: "text-sm font-medium" %>
                <%= form.password_field :password, autocomplete: "new-password", required: true, class: "w-full" %>
              </div>

              <div class="grid gap-2">
                <%= form.label :password_confirmation, t(".confirm_password"), class: "text-sm font-medium" %>
                <%= form.password_field :password_confirmation, autocomplete: "new-password", required: true, class: "w-full" %>
              </div>
            </div>
          </div>

          <div class="flex gap-3 pt-6">
            <%= form.submit t(".save_password"), class: "btn" %>
            <%= link_to t(".forgot_my_password"), new_users_password_reset_path, class: "btn btn-ghost" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
