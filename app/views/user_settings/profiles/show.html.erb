<% content_for(:title) { t("user_settings.page_titles.profile") } %>

<div class="container">
  <%= render partial: "user_settings/header" %>

  <div class="margin-block-start-double">
    <div class="panel" style="padding: var(--space-6);">
      <div class="flex flex-column gap-6">
        <div>
          <h2 class="txt-large font-weight-medium"><%= t(".profile") %></h2>
          <p class="txt-small txt-subtle"><%= t(".profile_description") %></p>
        </div>

        <%= form_with(model: @user,
              url: user_settings_profile_path,
              method: :patch,
              data: { controller: "form", action: "keydown.enter->form#submit:prevent" }) do |form| %>
          <%= render "error_messages", resource: form.object %>

          <div class="flex flex-column gap-6">
            <div>
              <h3 class="font-weight-medium margin-block-end"><%= t(".public_avatar") %></h3>
              <%= render ImageUploadPreviewComponent.new(
                    form: form,
                    field_name: :avatar,
                    preview_url: fresh_user_avatar_path(@user),
                    upload_button_text: t(".upload_new_avatar"),
                    size_hint: t(".avatar_size_hint"),
                    upload_button_variant: :default,
                    image_class: "flex-item-no-shrink fill-shade object-cover border-radius",
                    image_style: "inline-size: 5rem; block-size: 5rem;",
                    remove_path: (@user.avatar.attached? ? user_avatar_path(@user) : nil),
                    remove_confirmation: t(".remove_avatar_confirm")) %>
            </div>

            <div class="grid gap-4">
              <div class="grid gap-2">
                <%= form.label :name, class: "txt-small font-weight-medium" %>
                <%= form.text_field :name, autocomplete: "name", class: "full-width" %>
              </div>

              <div class="grid gap-2">
                <%= form.label :bio, class: "txt-small font-weight-medium" %>
                <%= form.text_area :bio, rows: 4, class: "full-width" %>
                <p class="txt-x-small txt-subtle">
                  <%= t(".bio_hint") %>
                </p>
              </div>
            </div>
          </div>

          <div class="flex justify-end" style="gap: var(--space-3); padding-block-start: var(--space-6);">
            <%= link_to t(".back_to_profile"), user_path(@user), class: "btn btn--secondary" %>
            <%= form.submit t(".update_profile"), class: "btn" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
