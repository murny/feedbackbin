<div data-slot="avatar" <%= tag.attributes(**options) %>>
  <% if src.present? %>
    <%= image_tag src,
        alt: alt || "Avatar",
        class: "aspect-square size-full object-cover",
        data: { slot: "avatar-image" },
        loading: "lazy" %>
  <% end %>

  <% if fallback.present? || src.blank? %>
    <div
      data-slot="avatar-fallback"
      class="bg-muted flex size-full items-center justify-center rounded-inherit text-muted-foreground font-medium">
      <%= fallback || "" %>
    </div>
  <% end %>
</div>
