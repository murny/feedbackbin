<%= tag.div(
  role: "alert",
  aria: { live: "assertive", atomic: true },
  tabindex: "-1",
  id: options[:id],
  class: inner_classes,
  data: {
    controller: "alert",
    alert_dismiss_after_value: options[:data][:alert_dismiss_after_value]
  }.compact
) do %>
  <div class="p-4">
    <div class="flex items-start">
      <% if icon.present? %>
        <div class="flex-shrink-0 mr-3">
          <%= lucide_icon icon, class: "size-5 text-current" %>
        </div>
      <% end %>

      <div class="w-0 flex-1 pt-0.5">
        <% if title.present? %>
          <p class="text-sm font-medium text-foreground"><%= title %></p>
        <% end %>

        <% if description.present? %>
          <p class="mt-1 text-sm text-muted-foreground"><%= description %></p>
        <% end %>
      </div>

      <% if dismissable %>
        <div class="ml-4 flex flex-shrink-0">
          <%= render_button(
            variant: :ghost,
            size: :icon,
            aria: { label: "Close" },
            data: { action: "alert#close" }
          ) do %>
            <%= lucide_icon "x", class: "size-5" %>
          <% end %>
        </div>
      <% end %>
    </div>

    <% if action.present? %>
      <div class="mt-4 flex space-x-3">
        <%= render_button(
          text: action[:label],
          variant: :outline,
          href: action[:url],
          data: {
            action: action[:action] || "click->alert#close"
          }
        ) %>
      </div>
    <% end %>
  </div>
<% end %>
