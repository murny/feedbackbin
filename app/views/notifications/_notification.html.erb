<div class="flex items-start gap-4 p-4 border border-border rounded-lg <%= 'bg-muted/50' unless notification.read? %>">
  <div class="flex-1">
    <div class="flex items-start justify-between gap-2">
      <div class="flex-1">
        <p class="text-sm">
          <%= notification.description_for(Current.user).to_html %>
        </p>
        <p class="text-xs text-muted-foreground mt-1">
          <%= time_ago_in_words(notification.created_at) %> ago
        </p>
      </div>

      <div class="flex items-center gap-2">
        <% unless notification.read? %>
          <span class="inline-block w-2 h-2 bg-primary rounded-full" title="Unread"></span>
        <% end %>

        <%= link_to notification.url, class: "text-sm text-primary hover:underline" do %>
          View
        <% end %>

        <% if notification.read? %>
          <%= button_to notification_path(notification, read: false), method: :patch, class: "text-xs text-muted-foreground hover:text-foreground" do %>
            Mark unread
          <% end %>
        <% else %>
          <%= button_to notification_path(notification, read: true), method: :patch, class: "text-xs text-muted-foreground hover:text-foreground" do %>
            Mark read
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
