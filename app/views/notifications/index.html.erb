<div class="container mx-auto px-4 py-8">
  <div class="flex items-center justify-between mb-6">
    <h1 class="text-3xl font-bold"><%= t(".heading") %></h1>
    <% if @unread.any? %>
      <%= button_to t(".mark_all_read"), bulk_reading_path, class: "px-4 py-2 text-sm bg-primary text-primary-foreground rounded-md hover:bg-primary/90" %>
    <% end %>
  </div>

  <% if @unread.any? || @read.any? %>
    <% if @unread.any? %>
      <h2 class="text-lg font-semibold mb-3"><%= t(".unread") %></h2>
      <div id="notifications" class="space-y-2 mb-8">
        <% @unread.each do |notification| %>
          <%= render "notification", notification: notification %>
        <% end %>
      </div>
    <% end %>

    <% if @read.any? %>
      <h2 class="text-lg font-semibold mb-3 text-muted-foreground"><%= t(".read") %></h2>
      <div class="space-y-2">
        <% @read.each do |notification| %>
          <%= render "notification", notification: notification %>
        <% end %>
      </div>
    <% end %>
  <% else %>
    <div class="text-center py-12">
      <p class="text-muted-foreground text-lg"><%= t(".all_caught_up") %></p>
      <p class="text-muted-foreground text-sm mt-2"><%= t(".no_notifications") %></p>
    </div>
  <% end %>
</div>
