 <% content_for(:content) do %>
 <div class="pad-inline" style="padding-inline: var(--space-6);">
    <div class="container container--wide">
      <div class="flex align-start full-width" style="gap: var(--space-12);">
        <%= render "staff/sidebar" %>

        <main class="min-width flex-1" style="padding-block-end: var(--space-16);">
          <div class="<%= content_for?(:component_nav) ? "container" : "full-width" %>">
            <%= yield %>
          </div>
        </main>

        <% if content_for?(:component_nav).present? %>
          <%= yield :component_nav %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>

<%= render template: "layouts/application" %>
