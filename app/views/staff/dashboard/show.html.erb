<div class="flex-1 flex flex-column" style="gap: var(--space-8); padding: var(--space-8); padding-block-start: var(--space-6);">
  <div class="flex align-center justify-space-between">
    <div class="flex flex-column" style="gap: var(--space-1);">
      <h2 class="txt-xx-large font-weight-bold">Staff Dashboard</h2>
      <p class="txt-subtle">
        System overview and analytics
      </p>
    </div>
    <div class="flex align-center" style="gap: var(--space-2);">
      <%= render Elements::ButtonComponent.new(
        variant: :outline,
        size: :default
      ) do %>
        <%= lucide_icon "calendar", class: "size-4" %>
        <span>Last 30 days</span>
      <% end %>
      <%= render Elements::ButtonComponent.new(
        variant: :default,
        size: :default
      ) do %>
        <%= lucide_icon "download", class: "size-4" %>
        <span>Download Report</span>
      <% end %>
    </div>
  </div>

  <div class="border-bottom">
    <nav class="flex" style="margin-block-end: -1px; gap: var(--space-4);">
      <a href="#" class="txt-small font-weight-medium txt-primary" style="border-block-end: 2px solid var(--color-primary); padding-block: var(--space-2); padding-inline: var(--space-3);">Overview</a>
      <a href="#" class="txt-small font-weight-medium txt-subtle" style="border-block-end: 2px solid transparent; padding-block: var(--space-2); padding-inline: var(--space-3);">Analytics</a>
      <a href="#" class="txt-small font-weight-medium txt-subtle" style="border-block-end: 2px solid transparent; padding-block: var(--space-2); padding-inline: var(--space-3);">Reports</a>
      <a href="#" class="txt-small font-weight-medium txt-subtle" style="border-block-end: 2px solid transparent; padding-block: var(--space-2); padding-inline: var(--space-3);">Notifications</a>
    </nav>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4" style="gap: var(--space-4);">
    <div class="card card--stat">
      <div class="flex align-center justify-space-between" style="padding: var(--space-6); padding-block-end: var(--space-2);">
        <div class="card__stat-label">Total Revenue</div>
        <%= lucide_icon "dollar-sign", class: "size-4 txt-subtle" %>
      </div>
      <div style="padding: var(--space-6); padding-block-start: 0;">
        <div class="card__stat-value" style="font-size: var(--text-x-large);">$45,231.89</div>
        <p class="txt-xx-small txt-subtle">+20.1% from last month</p>
      </div>
    </div>

    <div class="card card--stat">
      <div class="flex align-center justify-space-between" style="padding: var(--space-6); padding-block-end: var(--space-2);">
        <div class="card__stat-label">Active Users</div>
        <%= lucide_icon "users", class: "size-4 txt-subtle" %>
      </div>
      <div style="padding: var(--space-6); padding-block-start: 0;">
        <div class="card__stat-value" style="font-size: var(--text-x-large);">2,350</div>
        <p class="txt-xx-small txt-subtle">+18.1% from last month</p>
      </div>
    </div>

    <div class="card card--stat">
      <div class="flex align-center justify-space-between" style="padding: var(--space-6); padding-block-end: var(--space-2);">
        <div class="card__stat-label">New Signups</div>
        <%= lucide_icon "credit-card", class: "size-4 txt-subtle" %>
      </div>
      <div style="padding: var(--space-6); padding-block-start: 0;">
        <div class="card__stat-value" style="font-size: var(--text-x-large);">+1,234</div>
        <p class="txt-xx-small txt-subtle">+19% from last month</p>
      </div>
    </div>

    <div class="card card--stat">
      <div class="flex align-center justify-space-between" style="padding: var(--space-6); padding-block-end: var(--space-2);">
        <div class="card__stat-label">Active Now</div>
        <%= lucide_icon "activity", class: "size-4 txt-subtle" %>
      </div>
      <div style="padding: var(--space-6); padding-block-start: 0;">
        <div class="card__stat-value" style="font-size: var(--text-x-large);">573</div>
        <p class="txt-xx-small txt-subtle">+201 since last hour</p>
      </div>
    </div>
  </div>

  <div class="grid" style="gap: var(--space-4); grid-template-columns: repeat(7, minmax(0, 1fr));">
    <%= render Elements::CardComponent.new(class: "col-span-4") do |c| %>
      <% c.with_header(title: "Overview") %>
      <% c.with_body do %>
      <div class="full-width fill-shade border-radius flex align-center justify-center" style="block-size: 350px;">
        <span class="txt-subtle">Monthly revenue chart (placeholder)</span>
      </div>
      <% end %>
    <% end %>

    <%= render Elements::CardComponent.new(class: "col-span-3") do |c| %>
      <% c.with_header(title: "Recent Activity", description: "You had 265 actions this month.") %>
      <% c.with_body do %>
      <div class="flex flex-column" style="gap: var(--space-6);">
        <div class="flex align-center">
          <%= render Elements::AvatarComponent.new(
            fallback: "OM",
            size: :default
          ) %>
          <div style="margin-inline-start: var(--space-4);">
            <p class="txt-small font-weight-medium">Olivia Martin</p>
            <p class="txt-small txt-subtle">olivia.martin@example.com</p>
          </div>
          <div class="font-weight-medium flex-item-justify-end">+$1,999.00</div>
        </div>

        <div class="flex align-center">
          <%= render Elements::AvatarComponent.new(
            fallback: "JL",
            size: :default
          ) %>
          <div style="margin-inline-start: var(--space-4);">
            <p class="txt-small font-weight-medium">Jackson Lee</p>
            <p class="txt-small txt-subtle">jackson.lee@example.com</p>
          </div>
          <div class="font-weight-medium flex-item-justify-end">+$39.00</div>
        </div>

        <div class="flex align-center">
          <%= render Elements::AvatarComponent.new(
            fallback: "IN",
            size: :default
          ) %>
          <div style="margin-inline-start: var(--space-4);">
            <p class="txt-small font-weight-medium">Isabella Nguyen</p>
            <p class="txt-small txt-subtle">isabella.nguyen@example.com</p>
          </div>
          <div class="font-weight-medium flex-item-justify-end">+$299.00</div>
        </div>

        <div class="flex align-center">
          <%= render Elements::AvatarComponent.new(
            fallback: "WK",
            size: :default
          ) %>
          <div style="margin-inline-start: var(--space-4);">
            <p class="txt-small font-weight-medium">William Kim</p>
            <p class="txt-small txt-subtle">william.kim@example.com</p>
          </div>
          <div class="font-weight-medium flex-item-justify-end">+$99.00</div>
        </div>
      </div>
      <% end %>
    <% end %>
  </div>
</div>
