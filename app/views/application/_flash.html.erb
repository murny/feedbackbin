<%# locals: () %>

<div id="flash_banner" data-turbo-temporary>
  <% if alert = flash[:alert] %>
    <div data-controller="toggle" data-toggle-open-value="true">
      <div data-toggle-target="toggleable"
           data-transition-enter="transition ease-out duration-300"
           data-transition-enter-from="opacity-0 -translate-y-2"
           data-transition-enter-to="opacity-100 translate-y-0"
           data-transition-leave="transition ease-in duration-200"
           data-transition-leave-from="opacity-100"
           data-transition-leave-to="opacity-0"
           class="flex items-center p-4 border-t-4 border-destructive bg-card text-destructive"
           role="alert">
        <%= lucide_icon "triangle-alert", class: "flex-shrink-0 w-5 h-5" %>
        <div class="ms-3 text-sm font-medium">
          <%= alert %>
        </div>
        <button type="button"
                class="ms-auto -mx-1.5 -my-1.5 bg-background text-destructive rounded-lg focus:ring-2 focus:ring-ring p-1.5 hover:bg-accent hover:text-accent-foreground transition-colors inline-flex items-center justify-center h-8 w-8"
                data-toggle-target="trigger"
                data-action="toggle#hide"
                aria-label="<%= t(".dismiss") %>">
          <%= lucide_icon "x", class: "w-5 h-5" %>
        </button>
      </div>
    </div>
  <% end %>

  <% if notice = flash[:notice] %>
    <div data-controller="toggle" data-toggle-open-value="true">
      <div data-toggle-target="toggleable"
           data-transition-enter="transition ease-out duration-300"
           data-transition-enter-from="opacity-0 -translate-y-2"
           data-transition-enter-to="opacity-100 translate-y-0"
           data-transition-leave="transition ease-in duration-200"
           data-transition-leave-from="opacity-100"
           data-transition-leave-to="opacity-0"
           class="flex items-center p-4 border-t-4 border-success bg-card text-card-foreground"
           role="alert">
        <%= lucide_icon "circle-check", class: "flex-shrink-0 w-5 h-5 text-success" %>
        <div class="ms-3 text-sm font-medium">
          <%= notice %>
        </div>
        <button type="button"
                class="ms-auto -mx-1.5 -my-1.5 bg-background text-muted-foreground rounded-lg focus:ring-2 focus:ring-ring p-1.5 hover:bg-accent hover:text-accent-foreground transition-colors inline-flex items-center justify-center h-8 w-8"
                data-toggle-target="trigger"
                data-action="toggle#hide"
                aria-label="<%= t(".dismiss") %>">
          <%= lucide_icon "x", class: "w-5 h-5" %>
        </button>
      </div>
    </div>
  <% end %>
</div>

<div id="flash_toast"
     class="pointer-events-none fixed inset-0 z-50 flex flex-col items-end gap-2 p-4 sm:p-6"
     role="region"
     aria-live="assertive"
     data-turbo-temporary>
</div>
