<%# locals: (resource:) %>

<% if resource.errors.any? %>
  <div class="border-radius fill-shade pad" role="alert" style="border-inline-start: 3px solid var(--color-negative);">
    <div class="flex">
      <div class="flex-item-no-shrink">
        <%= lucide_icon "circle-x", class: "size-5 txt-negative" %>
        <span class="visually-hidden"><%= t(".danger") %></span>
      </div>
      <div style="margin-inline-start: var(--space-3);">
        <h3 class="txt-small font-weight-medium">
          <%= I18n.t("errors.messages.not_saved", count: resource.errors.count, resource: resource.class.model_name.human.downcase) %>
        </h3>
        <div class="txt-small margin-block-start-half">
          <ul role="list" class="flex flex-column" style="gap: var(--space-1); list-style: disc; padding-inline-start: var(--space-5);">
            <% resource.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
<% end %>
