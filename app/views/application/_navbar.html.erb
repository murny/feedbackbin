<%# locals: () %>

<nav class="sticky top-0 z-50 w-full border-b bg-background/80 backdrop-blur supports-[backdrop-filter]:bg-background/60" data-controller="toggle">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="flex h-16 items-center justify-between">
      <div class="flex items-center space-x-6">
        <%= link_to root_path, class: "flex-shrink-0 flex items-center" do %>
          <% if Current.organization %>
            <%= organization_logo(Current.organization, class: "h-8 w-8") %>
            <span class="ml-2 text-lg font-bold text-primary hidden md:block"><%= Current.organization.name %></span>
          <% else %>
            <%= inline_svg_tag "mark.svg", class: "h-8 w-8 text-primary" %>
            <span class="ml-2 text-lg font-bold text-primary hidden md:block"><%= t(".brand_name") %></span>
          <% end %>
        <% end %>

        <!-- Desktop Navigation Links -->
        <div class="hidden md:ml-8 md:flex md:items-center md:space-x-1">
          <%= active_link_to t(".links.feedback"),
                posts_path,
                class: "rounded-md px-3 py-2 text-sm font-medium transition-colors",
                active_class: "bg-accent text-accent-foreground",
                inactive_class: "text-foreground hover:bg-accent hover:text-accent-foreground" %>
          <%= active_link_to t(".links.roadmap"),
                roadmap_path,
                class: "rounded-md px-3 py-2 text-sm font-medium transition-colors",
                active_class: "bg-accent text-accent-foreground",
                inactive_class: "text-foreground hover:bg-accent hover:text-accent-foreground" %>
        </div>
      </div>

      <div class="flex flex-1 items-center justify-center px-6 md:ml-6 md:justify-end">
        <div class="w-full max-w-lg md:max-w-xs">
          <label for="search" class="sr-only"><%= t(".sr_only.search") %></label>
          <div class="relative">
            <div class="pointer-events-none absolute inset-y-0 left-0 flex items-center pl-3">
              <svg class="h-4 w-4 text-muted-foreground" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                <path fill-rule="evenodd" d="M9 3.5a5.5 5.5 0 100 11 5.5 5.5 0 000-11zM2 9a7 7 0 1112.452 4.391l3.328 3.329a.75.75 0 11-1.06 1.06l-3.329-3.328A7 7 0 012 9z" clip-rule="evenodd" />
              </svg>
            </div>
            <input id="search"
                   name="search"
                   autocomplete="off"
                   class="flex h-10 w-full rounded-md border border-input bg-background pl-10 pr-3 py-2 text-sm ring-offset-background file:border-0 file:bg-transparent file:text-sm file:font-medium placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50"
                   placeholder="<%= t(".search_placeholder") %>"
                   type="search">
          </div>
        </div>
      </div>
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <%= link_to changelogs_path,
                      class: [ "relative inline-flex items-center gap-x-1.5 rounded-md px-3 py-2 text-sm font-medium ring-offset-background transition-colors hover:bg-accent hover:text-accent-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2",
                      unread_changelogs_class(Current.user) ] do %>
          <%= lucide_icon "megaphone", class: "h-6 w-6" %>
          <span class="hidden md:block"><%= t(".links.whats_new") %></span>
          <% end %>
        </div>
      </div>
      <div class="flex items-center md:hidden">
        <!-- Mobile menu button -->
        <button type="button"
                class="relative inline-flex items-center justify-center rounded-md p-2 text-muted-foreground hover:bg-accent hover:text-accent-foreground ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2"
                aria-controls="mobile-menu"
                data-toggle-target="trigger"
                data-action="click->toggle#toggle touch->toggle#toggle">
          <span class="absolute -inset-0.5"></span>
          <span class="sr-only"><%= t(".sr_only.open_main_menu") %></span>
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
          </svg>

          <svg class="hidden h-3 w-3" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true" data-toggle-target="toggleable">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
      <div class="hidden md:ml-4 md:flex md:flex-shrink-0 md:items-center">
        <% if authenticated? %>
          <button type="button" class="relative rounded-full bg-background p-1 text-muted-foreground hover:text-foreground ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2">
            <span class="absolute -inset-1.5"></span>
            <span class="sr-only"><%= t(".sr_only.view_notifications") %></span>
            <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" d="M14.857 17.082a23.848 23.848 0 005.454-1.31A8.967 8.967 0 0118 9.75v-.7V9A6 6 0 006 9v.75a8.967 8.967 0 01-2.312 6.022c1.733.64 3.56 1.085 5.455 1.31m5.714 0a24.255 24.255 0 01-5.714 0m5.714 0a3 3 0 11-5.714 0" />
            </svg>
          </button>

          <!-- Profile dropdown -->
          <div class="relative ml-3">
            <%= render Elements::DropdownMenuComponent.new do |dropdown| %>
              <% dropdown.with_trigger(variant: :ghost, class: "relative rounded-full p-0 hover:bg-transparent") do %>
                <span class="absolute -inset-1.5"></span>
                <span class="sr-only"><%= t(".sr_only.open_user_menu") %></span>
                <%= image_tag fresh_user_avatar_path(Current.user), role: "presentation", class: "h-8 w-8 rounded-full", alt: "" %>
              <% end %>

              <% dropdown.with_item_label do %>
                <p class="text-sm text-muted-foreground"><%= t(".signed_in_as") %></p>
                <p class="truncate text-sm font-medium text-popover-foreground"><%= Current.user.username %></p>
              <% end %>

              <% dropdown.with_item_separator %>

              <% dropdown.with_item_content(href: user_path(Current.user)) do %>
                <%= t(".links.your_profile") %>
              <% end %>

              <% dropdown.with_item_content(href: user_settings_profile_path) do %>
                <%= t(".links.settings") %>
              <% end %>

              <% if Current.admin? && Current.organization %>
                <% dropdown.with_item_separator %>

                <% dropdown.with_item_content(href: admin_root_path) do %>
                  <%= t(".links.admin_dashboard") %>
                <% end %>
              <% end %>

              <% if Rails.env.development? %>
                <% dropdown.with_item_separator %>

                <% dropdown.with_item_content(href: letter_opener_web_path) do %>
                  <%= t(".links.letter_opener") %>
                <% end %>

                <% dropdown.with_item_content(href: super_admin_mission_control_jobs_path) do %>
                  <%= t(".links.mission_control_jobs") %>
                <% end %>
              <% end %>

              <% dropdown.with_item_separator %>

              <% dropdown.with_item_content(
                href: users_session_path,
                method: :delete
              ) do %>
                <%= t(".sign_out") %>
              <% end %>

              <% if Current.user.super_admin? %>
                <% dropdown.with_item_separator %>

                <% dropdown.with_item_content(href: super_admin_root_path) do %>
                  <%= t(".links.super_admin") %>
                <% end %>
              <% end %>
            <% end %>
          </div>
        <% else %>
          <%= link_to t(".sign_up"), sign_up_path, class: "btn btn-secondary" %>
          <%= link_to t(".sign_in"), sign_in_path, class: "ml-2 btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Mobile menu, show/hide based on menu state. -->
  <div class="hidden" id="mobile-menu"
        data-toggle-target="toggleable"
        data-transition-enter="transition-all ease-linear duration-300"
        data-transition-enter-from="opacity-0 h-0"
        data-transition-enter-to="opacity-100"
        data-transition-leave="transition-all ease-linear duration-300"
        data-transition-leave-from="opacity-100"
        data-transition-leave-to="opacity-0">
    <div class="space-y-1 px-2 pb-3 pt-2 sm:px-3">
      <%= active_link_to t(".links.feedback"),
            posts_path,
            class: "block rounded-md px-3 py-2 text-base font-medium transition-colors",
            active_class: "bg-accent text-accent-foreground",
            inactive_class: "text-foreground hover:bg-accent hover:text-accent-foreground" %>
      <%= active_link_to t(".links.roadmap"),
            roadmap_path,
            class: "block rounded-md px-3 py-2 text-base font-medium transition-colors",
            active_class: "bg-accent text-accent-foreground",
            inactive_class: "text-foreground hover:bg-accent hover:text-accent-foreground" %>
    </div>
    <div class="border-t border-border pb-3 pt-4">
      <% if authenticated? %>
        <div class="flex items-center px-5 sm:px-6">
          <div class="flex-shrink-0">
            <%= image_tag fresh_user_avatar_path(Current.user), role: "presentation", class: "h-10 w-10 rounded-full", alt: "" %>
          </div>
          <div class="ml-3">
            <div class="text-base font-medium text-foreground"><%= Current.user.name %></div>
            <div class="text-sm font-medium text-muted-foreground"><%= Current.user.username %></div>
          </div>
          <button type="button" class="relative ml-auto flex-shrink-0 rounded-full bg-background p-1 text-muted-foreground hover:text-foreground ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2">
            <span class="absolute -inset-1.5"></span>
            <span class="sr-only"><%= t(".sr_only.view_notifications") %></span>
            <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" d="M14.857 17.082a23.848 23.848 0 005.454-1.31A8.967 8.967 0 0118 9.75v-.7V9A6 6 0 006 9v.75a8.967 8.967 0 01-2.312 6.022c1.733.64 3.56 1.085 5.455 1.31m5.714 0a24.255 24.255 0 01-5.714 0m5.714 0a3 3 0 11-5.714 0" />
            </svg>
          </button>
        </div>
        <div class="mt-3 space-y-1 px-2 sm:px-3">
          <%= link_to t(".links.your_profile"),
                user_path(Current.user),
                class: "block rounded-md px-3 py-2 text-base font-medium text-muted-foreground hover:bg-accent hover:text-accent-foreground transition-colors" %>
          <%= link_to t(".links.settings"),
                user_settings_profile_path,
                class: "block rounded-md px-3 py-2 text-base font-medium text-muted-foreground hover:bg-accent hover:text-accent-foreground transition-colors" %>
        </div>
        <div class="mt-3 space-y-1 px-2 sm:px-3 border-t border-border pt-3">
          <% if Current.admin? && Current.organization %>
            <%= link_to t(".links.admin_dashboard"),
                  admin_root_path,
                  class: "block rounded-md px-3 py-2 text-base font-medium text-muted-foreground hover:bg-accent hover:text-accent-foreground transition-colors" %>
          <% end %>
        </div>
        <div class="mt-3 space-y-1 px-2 sm:px-3 border-t border-border pt-3">
          <%= button_to t(".sign_out"), users_session_path, method: :delete, class: "block rounded-md px-3 py-2 text-base font-medium text-muted-foreground hover:bg-accent hover:text-accent-foreground transition-colors" %>
        </div>
      <% else %>
        <div class="px-2 pt-2 pb-3 space-y-1">
          <%= link_to t(".sign_in"), sign_in_path, class: "block rounded-md px-3 py-2 text-base font-medium text-muted-foreground hover:bg-accent hover:text-accent-foreground transition-colors" %>
        </div>
      <% end %>
    </div>
  </div>
</nav>
