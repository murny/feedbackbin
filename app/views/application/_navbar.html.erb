<div class="navbar shadow px-4 bg-base-100">
  <div class="flex-1">
    <%= link_to "FeedbackBin", root_path, class: "" %>
  </div>
  <div class="flex-none gap-2">
    <div class="form-control">
      <input type="text" autocomplete="off" placeholder="Search" class="input input-bordered w-24 md:w-auto">
    </div>
    <% if authenticated? %>
      <div class="dropdown dropdown-end">
        <div tabindex="0" role="button" class="" id="navbar_toggle">
          <div class="w-10 rounded-full">
            <%#= image_tag current_user.avatar_url, class: "rounded-full" %>
          </div>
        </div>
        <ul
          tabindex="0"
          class="menu menu-sm dropdown-content bg-base-100 rounded-box z-[1] mt-3 w-52 p-2 shadow">
          <li><a>Profile</a></li>
          <li><%= link_to "Settings", edit_users_settings_profile_path %></li>
          <div class="divider mt-0 mb-0"></div>
          <li><%= button_to t(".sign_out"), users_session_path, method: :delete %></li>
        </ul>
      </div>
    <% else %>
      <div class="flex gap-4 items-center">
        <%= link_to t(".sign_up"), sign_up_path, class: "" %>
        <%= link_to t(".log_in"), sign_in_path, class: "" %>
      </ul>
    <% end %>
  </div>
</div>
