<% content_for(:title) { t(".check_your_email") } %>

<div class="flex min-h-svh flex-col items-center justify-center gap-6 p-6 md:p-10">
  <div class="flex w-full max-w-sm flex-col gap-6">
    <% if Current.account.present? %>
      <%= link_to root_path, class: "flex items-center gap-2 self-center font-medium" do %>
        <%= account_logo(Current.account, class: "h-8 w-8") %>
        <span class="font-bold text-primary text-xl"><%= Current.account.name %></span>
      <% end %>
    <% else %>
      <div class="flex items-center gap-2 self-center font-medium">
        <%= inline_svg_tag "mark.svg", class: "h-8 w-8 text-blue-500" %>
        <span class="font-bold text-blue-500"><%= t(".brand_name") %></span>
      </div>
    <% end %>

    <div class="card flex flex-col gap-6 py-6 <%= "animate-shake" if flash[:shake] %>">
      <header class="px-6 text-center space-y-1.5">
        <h1 class="font-semibold text-xl"><%= t(".check_your_email") %></h1>
        <p class="text-muted-foreground text-sm"><%= t(".enter_code_instructions") %></p>
      </header>

      <div class="px-6 grid gap-6">
        <%= form_with url: session_magic_link_path, method: :post, class: "grid gap-6", data: { controller: "magic-link" } do |form| %>
          <div class="grid gap-3">
            <%= form.label :code, t(".verification_code"), class: "text-sm font-medium leading-none" %>
            <%= form.text_field :code,
                  required: true,
                  autofocus: true,
                  autocomplete: "one-time-code",
                  autocorrect: "off",
                  autocapitalize: "characters",
                  spellcheck: "false",
                  maxlength: "6",
                  placeholder: t(".code_placeholder"),
                  class: "text-center text-lg tracking-widest uppercase",
                  data: { "1p_ignore": true, magic_link_target: "input", action: "keydown.enter->magic-link#submitOnEnter paste->magic-link#submitOnPaste" } %>
          </div>

          <%= form.submit t(".verify_code"), class: "btn w-full" %>
        <% end %>

        <p class="text-muted-foreground text-center text-sm">
          <%= t(".code_sent_to_html", email: content_tag(:strong, email_address_pending_authentication)) %>
          <br>
          <%= t(".code_expires_in", time: distance_of_time_in_words(MagicLink::EXPIRATION_TIME)) %>
        </p>
      </div>
    </div>

    <% if Rails.env.development? && flash[:magic_link_code].present? %>
      <div class="card p-4 bg-muted">
        <p class="text-sm text-muted-foreground text-center">
          <span class="text-xs uppercase font-bold">Dev</span>
          <%= t(".your_code") %>:
          <code class="text-lg font-bold tracking-widest"><%= flash[:magic_link_code] %></code>
        </p>
      </div>
    <% end %>
  </div>
</div>
