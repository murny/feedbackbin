<div class="container mx-auto max-w-4xl">
  <h1 class="h2 mt-6 text-center"><%= t(".title") %></h1>
  <p class="mt-2 text-center text-xl text-gray-700 dark:text-gray-300/75"><%= t(".description", name: Rails.application.config.app_name) %></p>

  <%= link_to changelogs_path, class: "text-sm font-medium" do %>
    &larr;
    <%= t(".back") %>
  <% end %>

  <div class="mt-6 flex flex-col rounded-lg bg-white border border-gray-200 dark:bg-gray-900 dark:border-gray-700">
    <%= render @changelog %>
  </div>
</div>
