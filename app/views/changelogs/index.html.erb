<%= content_for :title, t(".title") %>

<section class="center pad-inline" style="margin-block-start: var(--space-6);">
  <div class="center flex flex-column" style="max-inline-size: 56rem; gap: var(--space-6);">
    <div class="txt-align-center">
      <h1 class="txt-xx-large font-weight-bold" style="margin-block-end: var(--space-2);"><%= t(".title") %></h1>
      <p class="txt-subtle txt-medium"><%= t(".description", name: Rails.application.config.app_name) %></p>
    </div>

    <% if @changelogs.empty? %>
      <%= render Elements::CardComponent.new do |c| %>
        <% c.with_body(class: "pad") do %>
        <div class="flex flex-column align-center justify-center txt-align-center" style="padding-block: var(--space-12);">
          <div class="flex align-center justify-center border-radius fill-shade" style="block-size: 5rem; inline-size: 5rem; opacity: 0.5;">
            <%= lucide_icon "scroll-text", style: "inline-size: 2.5rem; block-size: 2.5rem; color: var(--color-muted-foreground);" %>
          </div>
          <h3 class="txt-medium font-weight-bold" style="margin-block-start: var(--space-6);"><%= t(".empty_placeholder") %></h3>
          <p class="txt-small txt-subtle" style="margin-block-start: var(--space-2); max-inline-size: 24rem;">
            <%= t(".empty_description") %>
          </p>
        </div>
        <% end %>
      <% end %>
    <% else %>
      <div class="flex flex-column" style="gap: var(--space-4);">
        <% @changelogs.each do |changelog| %>
          <%= render Elements::CardComponent.new do |c| %>
            <% c.with_body do %>
              <%= render changelog %>
            <% end %>
          <% end %>
        <% end %>
      </div>
    <% end %>

    <% if @pagy.last > 1 %>
      <div class="flex align-center justify-space-between pad-inline" style="padding-block: var(--space-3);">
        <%== pagy.info_tag %>
        <%== pagy.series_nav %>
      </div>
    <% end %>
  </div>
</section>
