<%# locals: (changelog:) %>

<div id="<%= dom_id(changelog) %>" style="padding-inline: var(--space-6);">
  <div class="flex align-center justify-space-between" style="gap: var(--space-3); margin-block-end: var(--space-4);">
    <%= link_to changelog_path(changelog), class: "txt-small txt-subtle font-weight-medium changelog__date-link" do %>
      <%= local_datetime_tag changelog.published_at, style: :datetime %>
    <% end %>
    <%= render Elements::BadgeComponent.new(
      variant: changelog_badge_variant(changelog.kind)
    ) do %>
      <%= changelog.kind.humanize.titleize %>
    <% end %>
  </div>

  <h2 class="txt-x-large font-weight-semibold" style="margin-block-end: var(--space-4);">
    <%= link_to changelog.title, changelog_path(changelog), class: "changelog__title-link" %>
  </h2>

  <div class="prose txt-subtle" style="max-inline-size: none; font-size: var(--text-small);" data-controller="syntax-highlight">
    <%= changelog.description %>
  </div>
</div>
