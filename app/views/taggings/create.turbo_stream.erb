<%# Update the idea tags container %>
<%= turbo_stream.replace "idea-tags" do %>
  <div id="idea-tags" class="flex flex-wrap gap-2 mb-4">
    <% @idea.tags.each do |tag| %>
      <%= render "tags/tag", tag: tag, idea: @idea, removable: policy(@idea).edit? %>
    <% end %>
  </div>
<% end %>

<%# Show success flash message %>
<%= turbo_stream.prepend "flash" do %>
  <%= render partial: "shared/flash", locals: { type: :notice, message: flash[:notice] } if flash[:notice] %>
<% end %>
