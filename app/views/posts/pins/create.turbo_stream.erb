<%= turbo_stream.update "post-pin-button" do %>
  <%= render Ui::DropdownMenuComponent::ItemComponent.new(
    id: "post-pin-button",
    href: post_pin_path(@post),
    method: :delete
  ) do %>
    <%= t("posts.show.unpin") %>
  <% end %>
<% end %>

<%= turbo_stream.update "post-pinned-badge" do %>
  <%= render Ui::BadgeComponent.new(variant: :secondary) do %>
    <%= lucide_icon "map-pin" %>
    <%= t("posts.show.pinned") %>
  <% end %>
<% end %>