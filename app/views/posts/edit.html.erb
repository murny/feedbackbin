<%= content_for :title, t("posts.edit.title") %>

<div class="container mx-auto px-4 my-8">
  <div class="flex items-center justify-between mb-4">
    <h1 class="h3">
      <%= link_to t("posts.index.title"), posts_path, class: "text-black dark:text-white" %>
      <span class="text-gray-400 font-light mx-2">\</span>
      <%= t("posts.edit.title") %>
    </h1>
    <%= button_to t("delete"), @post, method: :delete, class: "btn btn-secondary", form: {data: {turbo_confirm: t("are_you_sure")}} %>
  </div>

  <div class="p-8 bg-white dark:bg-gray-900 dark:border dark:border-gray-700 rounded shadow">
    <%= render "form", post: @post %>
  </div>
</div>
