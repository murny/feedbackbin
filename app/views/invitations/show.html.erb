<% content_for(:title) { t(".title") } %>

<div class="flex flex-column align-center justify-center" style="min-block-size: 100svh; gap: var(--space-6); padding: var(--space-6);">
  <div class="flex flex-column full-width" style="max-inline-size: 28rem; gap: var(--space-6);">
    <%= link_to root_path, class: "flex align-center align-self-center font-weight-medium", style: "gap: var(--space-2);" do %>
      <%= account_logo(@invitation.account) %>
      <span class="font-weight-bold txt-primary txt-x-large"><%= @invitation.account.name %></span>
    <% end %>

    <div class="card flex flex-column" style="gap: var(--space-6); padding-block: var(--space-8);">
      <div class="pad-inline txt-align-center flex flex-column" style="gap: var(--space-4);">
        <div class="invitation__icon-wrapper">
          <%= lucide_icon "mail", class: "invitation__icon" %>
        </div>

        <div class="flex flex-column" style="gap: var(--space-2);">
          <h1 class="font-weight-bold txt-x-large"><%= t(".heading") %></h1>
          <p class="txt-subtle txt-small">
            <%= t(".invited_by_html", inviter_name: content_tag(:strong, @invitation.invited_by.name)) %>
          </p>
        </div>

        <div style="padding-block-start: var(--space-4);">
          <%= link_to users_sign_up_path(invitation_token: @invitation.token), class: "btn btn--primary full-width" do %>
            <%= lucide_icon "user-plus", style: "margin-inline-end: var(--space-2); inline-size: 1rem; block-size: 1rem;" %>
            <%= t(".create_account") %>
          <% end %>
        </div>
      </div>

      <div class="pad-inline">
        <div class="position-relative txt-align-center txt-small">
          <div class="border-top"></div>
        </div>
      </div>

      <div class="pad-inline txt-align-center">
        <p class="txt-small txt-subtle">
          <%= t(".already_have_account") %>
          <%= link_to t(".sign_in"), sign_in_path(script_name: nil, return_to: root_url(script_name: @invitation.account.slug)), class: "txt-primary font-weight-medium", style: "text-underline-offset: 4px;" %>
        </p>
      </div>
    </div>
  </div>
</div>
