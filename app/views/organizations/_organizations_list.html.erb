<div class="grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-3">
  <% organizations.each do |organization| %>
    <%= render organization %>
  <% end %>
</div>

<!-- Empty State -->
<% if organizations.empty? %>
  <div class="text-center py-12">
    <div class="mx-auto size-16 bg-muted rounded-full flex items-center justify-center mb-4">
      <%= lucide_icon "building", class: "size-8 text-muted-foreground" %>
    </div>
    <% if params[:search].present? %>
      <h3 class="text-lg font-medium text-foreground mb-2"><%= t(".no_match_title") %></h3>
      <p class="text-muted-foreground"><%= t(".no_match_description", search_term: params[:search]) %></p>
    <% else %>
      <h3 class="text-lg font-medium text-foreground mb-2"><%= t(".no_organizations_title") %></h3>
      <p class="text-muted-foreground mb-6"><%= t(".no_organizations_description") %></p>
      <%= render_button(
        text: t("organizations.index.new_organization"),
        href: new_organization_path,
        variant: :default
      ) %>
    <% end %>
  </div>
<% end %>
