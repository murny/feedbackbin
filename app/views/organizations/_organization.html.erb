<%= render_card(class: "group cursor-pointer transition-all hover:shadow-md hover:border-ring/50") do %>
  <%= link_to organization_path(organization), class: "block p-6", data: { turbo_frame: "_top" } do %>
    <div class="flex items-center space-x-4">
      <div class="flex-shrink-0">
        <%= organization_logo(organization) %>
      </div>
      <div class="flex-1 min-w-0">
        <h3 class="text-lg font-semibold text-foreground truncate group-hover:text-primary transition-colors">
          <%= organization.name %>
        </h3>
        <div class="flex items-center space-x-4 mt-2">
          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-secondary text-secondary-foreground">
            <%= t(".free_plan") %>
          </span>
          <% if organization.users.any? %>
            <span class="text-sm text-muted-foreground">
              <%= pluralize(organization.users.count, "member") %>
            </span>
          <% end %>
        </div>
      </div>
      <div class="flex-shrink-0 text-muted-foreground group-hover:text-foreground transition-colors">
        <%= inline_svg_tag "icons/chevron-right.svg", class: "size-5" %>
      </div>
    </div>
  <% end %>
<% end %>
