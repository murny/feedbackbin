<% content_for :title, @organization.name %>

<div class="container mx-auto px-4 py-6 space-y-6">
  <!-- Header Section -->
  <div class="flex flex-col space-y-4 lg:flex-row lg:items-center lg:justify-between lg:space-y-0">
    <div class="flex items-center space-x-4">
      <div class="flex-shrink-0">
        <div class="relative p-1 bg-background border border-border rounded-lg shadow-sm">
          <%= organization_logo(@organization, size: :xl, class: "border border-border/50") %>
        </div>
      </div>
      <div class="min-w-0 flex-1">
        <h1 class="text-2xl font-bold text-foreground sm:text-3xl">
          <%= @organization.name %>
        </h1>
        <div class="mt-1 flex flex-col sm:flex-row sm:flex-wrap sm:space-x-6">
          <div class="mt-2 flex items-center text-sm text-muted-foreground">
            <%= inline_svg_tag "icons/users.svg", class: "mr-1.5 size-4 flex-shrink-0" %>
            <%= pluralize(@members_count, "member") %>
          </div>
          <div class="mt-2 flex items-center text-sm text-muted-foreground">
            <%= inline_svg_tag "icons/message-square.svg", class: "mr-1.5 size-4 flex-shrink-0" %>
            <%= pluralize(@posts_count, "post") %>
          </div>
        </div>
      </div>
    </div>

    <!-- Action Buttons -->
    <div class="flex flex-col space-y-2 sm:flex-row sm:space-y-0 sm:space-x-3">
      <%= render_button(
        text: "View Posts",
        href: posts_path,
        variant: :outline,
        class: "w-full sm:w-auto"
      ) %>

      <% if policy(@organization).edit? %>
        <%= render_button(
          text: "Settings",
          href: edit_organization_path(@organization),
          variant: :outline,
          class: "w-full sm:w-auto"
        ) %>

        <%= render_button(
          text: "Invite Members",
          href: new_organization_organization_invitation_path(@organization),
          variant: :default,
          class: "w-full sm:w-auto"
        ) %>
      <% end %>
    </div>
  </div>

  <!-- Metrics Cards -->
  <div class="grid grid-cols-1 gap-4 sm:grid-cols-3">
    <!-- Total Posts -->
    <%= render_card(class: "px-6") do %>
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <div class="flex size-8 items-center justify-center rounded-lg bg-primary/10">
            <%= inline_svg_tag "icons/message-square.svg", class: "size-4 text-primary" %>
          </div>
        </div>
        <div class="ml-4 w-0 flex-1">
          <dl>
            <dt class="text-sm font-medium text-muted-foreground truncate">Total Posts</dt>
            <dd class="text-lg font-semibold text-foreground"><%= @posts_count %></dd>
          </dl>
        </div>
      </div>
    <% end %>

    <!-- Total Members -->
    <%= render_card(class: "px-6") do %>
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <div class="flex size-8 items-center justify-center rounded-lg bg-blue-500/10">
            <%= inline_svg_tag "icons/users.svg", class: "size-4 text-blue-600 dark:text-blue-400" %>
          </div>
        </div>
        <div class="ml-4 w-0 flex-1">
          <dl>
            <dt class="text-sm font-medium text-muted-foreground truncate">Members</dt>
            <dd class="text-lg font-semibold text-foreground"><%= @members_count %></dd>
          </dl>
        </div>
      </div>
    <% end %>

    <!-- Plan Badge -->
    <%= render_card(class: "px-6") do %>
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <div class="flex size-8 items-center justify-center rounded-lg bg-purple-500/10">
            <%= inline_svg_tag "icons/crown.svg", class: "size-4 text-purple-600 dark:text-purple-400" %>
          </div>
        </div>
        <div class="ml-4 w-0 flex-1">
          <dl>
            <dt class="text-sm font-medium text-muted-foreground truncate">Plan</dt>
            <dd class="text-lg font-semibold text-foreground">Free</dd>
          </dl>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Main Content Grid -->
  <div class="grid grid-cols-1 gap-6 lg:grid-cols-2">
    <!-- Recent Posts -->
    <%= render_card(
      title: "Recent Posts",
      header_action: link_to("View all", posts_path, class: "text-sm font-medium text-primary hover:text-primary/80"),
      class: "px-6"
    ) do %>
      <% if @recent_posts.any? %>
        <div class="space-y-4">
          <% @recent_posts.each do |post| %>
            <div class="flex items-start space-x-3">
              <div class="flex-shrink-0">
                <%= render_avatar(
                  src: post.author.avatar.attached? ? url_for(post.author.avatar) : nil,
                  alt: post.author.name,
                  size: :sm,
                  fallback: post.author.name[0, 2].upcase
                ) %>
              </div>
              <div class="min-w-0 flex-1">
                <div class="text-sm">
                  <%= link_to post.title, post_path(post), class: "font-medium text-foreground hover:text-primary line-clamp-1" %>
                </div>
                <div class="mt-1 flex items-center space-x-2 text-xs text-muted-foreground">
                  <span><%= post.author.name %></span>
                  <span>•</span>
                  <span><%= time_ago_in_words(post.created_at) %> ago</span>
                  <% if post.category %>
                    <span>•</span>
                    <span class="inline-flex items-center rounded-full bg-secondary px-2 py-0.5 text-xs font-medium text-secondary-foreground">
                      <%= post.category.name %>
                    </span>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="text-center py-6">
          <div class="mx-auto size-12 bg-muted rounded-full flex items-center justify-center mb-3">
            <%= inline_svg_tag "icons/message-square.svg", class: "size-6 text-muted-foreground" %>
          </div>
          <h3 class="text-sm font-medium text-foreground">No posts yet</h3>
          <p class="mt-1 text-sm text-muted-foreground">Get started by creating your first post.</p>
          <div class="mt-4">
            <%= render_button(
              text: "Create Post",
              href: new_post_path,
              variant: :default,
              size: :sm
            ) %>
          </div>
        </div>
      <% end %>
    <% end %>

    <!-- Recent Members -->
    <%= render_card(
      title: "Recent Members",
      header_action: (policy(@organization).edit? ? link_to("View all", organization_memberships_path(@organization), class: "text-sm font-medium text-primary hover:text-primary/80") : nil),
      class: "px-6"
    ) do %>
      <% if @recent_memberships.any? %>
        <div class="space-y-4">
          <% @recent_memberships.each do |membership| %>
            <div class="flex items-center space-x-3">
              <div class="flex-shrink-0">
                <%= render_avatar(
                  src: membership.user.avatar.attached? ? url_for(membership.user.avatar) : nil,
                  alt: membership.user.name,
                  size: :sm,
                  fallback: membership.user.name[0, 2].upcase
                ) %>
              </div>
              <div class="min-w-0 flex-1">
                <div class="text-sm font-medium text-foreground truncate">
                  <%= membership.user.name %>
                </div>
                <div class="text-xs text-muted-foreground">
                  <%= membership.user.email_address %>
                </div>
              </div>
              <div class="flex-shrink-0">
                 <span class="inline-flex items-center rounded-full px-2 py-1 text-xs font-medium <%= membership&.administrator? ? "bg-primary/10 text-primary" : "bg-secondary text-secondary-foreground" %>">
                  <%= membership&.role&.humanize || "Member" %>
                </span>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="text-center py-6">
          <div class="mx-auto size-12 bg-muted rounded-full flex items-center justify-center mb-3">
            <%= inline_svg_tag "icons/users.svg", class: "size-6 text-muted-foreground" %>
          </div>
          <h3 class="text-sm font-medium text-foreground">No members yet</h3>
          <p class="mt-1 text-sm text-muted-foreground">Invite team members to get started.</p>
          <% if policy(@organization).edit? %>
            <div class="mt-4">
              <%= render_button(
                text: "Invite Members",
                href: new_organization_organization_invitation_path(@organization),
                variant: :default,
                size: :sm
              ) %>
            </div>
          <% end %>
        </div>
      <% end %>
    <% end %>
  </div>

  <!-- Quick Actions -->
  <%= render_card(
    title: "Quick Actions",
    class: "px-6"
  ) do %>
    <div class="grid grid-cols-1 gap-3 sm:grid-cols-2 <%= policy(@organization).edit? ? "lg:grid-cols-4" : "lg:grid-cols-2" %>">
      <%= render_button(
        text: "View Posts",
        href: posts_path,
        variant: :outline,
        class: "w-full justify-start transition-colors"
      ) do %>
        <%= inline_svg_tag "icons/message-square.svg", class: "mr-2 size-4" %>
        View Posts
      <% end %>

      <%= render_button(
        text: "Changelogs",
        href: changelogs_path,
        variant: :outline,
        class: "w-full justify-start transition-colors"
      ) do %>
        <%= inline_svg_tag "icons/file-text.svg", class: "mr-2 size-4" %>
        Changelogs
      <% end %>

      <% if policy(@organization).edit? %>
        <%= render_button(
          text: "Manage Members",
          href: organization_memberships_path(@organization),
          variant: :outline,
          class: "w-full justify-start transition-colors",
        ) do %>
          <%= inline_svg_tag "icons/users.svg", class: "mr-2 size-4" %>
          Manage Members
        <% end %>

        <%= render_button(
          text: "Organization Settings",
          href: edit_organization_path(@organization),
          variant: :outline,
          class: "w-full justify-start transition-colors"
        ) do %>
          <%= inline_svg_tag "icons/settings.svg", class: "mr-2 size-4" %>
          Settings
        <% end %>
      <% end %>
    </div>
  <% end %>
</div>
