<%# locals: (status:, posts:) %>

<div class="shrink-0 w-80 lg:w-96">
  <!-- Column Header -->
  <div class="mb-4 flex items-center gap-2">
    <div class="h-3 w-3 rounded-full shrink-0"
         style="background-color: <%= status.color %>;"></div>
    <h2 class="text-lg font-semibold">
      <%= status.name %>
    </h2>
    <span class="text-sm text-muted-foreground">
      (<%= posts.size %>)
    </span>
  </div>

  <!-- Posts List -->
  <div class="space-y-3">
    <% if posts.any? %>
      <% posts.each do |post| %>
        <%= render "post_card", post: post %>
      <% end %>
    <% else %>
      <div class="text-center py-12 border-2 border-dashed border-border rounded-lg bg-muted/20">
        <%= lucide_icon "inbox", class: "h-10 w-10 mx-auto mb-3 text-muted-foreground opacity-50" %>
        <p class="text-sm text-muted-foreground"><%= t(".no_posts") %></p>
      </div>
    <% end %>
  </div>
</div>
