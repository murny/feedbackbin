<%# locals: (status:, ideas:) %>

<div class="roadmap-column">
  <!-- Column Header -->
  <div class="flex align-center" style="margin-block-end: var(--space-4); gap: var(--space-2);">
    <div class="roadmap-column__status-dot"
         style="background-color: <%= status.color %>;"></div>
    <h2 class="txt-medium font-weight-bold">
      <%= status.name %>
    </h2>
    <span class="txt-small txt-subtle">
      (<%= ideas.size %>)
    </span>
  </div>

  <!-- Ideas List -->
  <div class="flex flex-column" style="gap: var(--space-3);">
    <% if ideas.any? %>
      <% ideas.each do |idea| %>
        <%= render "idea_card", idea: idea %>
      <% end %>
    <% else %>
      <div class="roadmap-column__empty">
        <%= lucide_icon "inbox", class: "center", style: "inline-size: 2.5rem; block-size: 2.5rem; margin-block-end: var(--space-3); color: var(--color-muted-foreground); opacity: 0.5;" %>
        <p class="txt-small txt-subtle"><%= t(".no_ideas") %></p>
      </div>
    <% end %>
  </div>
</div>
