<%# locals: (post:) %>

<%= link_to post, class: "block group" do %>
  <div class="border border-border rounded-lg p-4 bg-card hover:border-primary hover:shadow-md transition-all duration-200">
    <!-- Post Title -->
    <h3 class="font-medium text-sm mb-3 line-clamp-2 group-hover:text-primary transition-colors">
      <%= post.title %>
    </h3>

    <!-- Post Meta -->
    <div class="flex items-center flex-wrap gap-2 text-xs text-muted-foreground">
      <!-- Category Badge -->
      <%= render_badge(
        text: post.category.name,
        variant: :outline,
        class: "text-muted-foreground bg-muted/30"
      ) %>

      <!-- Vote Count -->
      <span class="inline-flex items-center gap-1">
        <%= lucide_icon "arrow-up", class: "h-3 w-3" %>
        <%= post.likes_count %>
      </span>

      <!-- Created Date (relative) -->
      <span title="<%= l(post.created_at, format: :long) %>">
        <%= time_ago_in_words(post.created_at) %> <%= t(".ago") %>
      </span>
    </div>
  </div>
<% end %>
