<%= tag.div(**html_attrs) do %>
  <% @avatars.each do |avatar| %>
    <% avatar_component = render Elements::AvatarComponent.new(
      src: avatar[:src],
      alt: avatar[:alt],
      fallback: avatar[:fallback],
      size: @size,
      ring: @ring
    ) %>
    <% if avatar[:href] %>
      <%= link_to avatar[:href], title: avatar[:title], data: { tooltip: avatar[:title] } do %><%= avatar_component %><% end %>
    <% else %>
      <%= avatar_component %>
    <% end %>
  <% end %>

  <% if show_remaining? %>
    <%= render Elements::AvatarComponent.new(
      fallback: "+#{remaining_count}",
      size: @size,
      ring: @ring
    ) %>
  <% end %>
<% end %>
