<%= tag.div(**html_attrs) do %>
  <% if @fallback.present? || @src.blank? %>
    <%= tag.div(
      data: { slot: "avatar-fallback" },
      class: "avatar__fallback"
    ) do %>
      <%= @fallback || "" %>
    <% end %>
  <% end %>

  <% if @src.present? %>
    <%= image_tag @src,
        alt: @alt,
        class: "avatar__image",
        data: { slot: "avatar-image" },
        loading: "lazy" %>
  <% end %>
<% end %>
