<%= tag.div(**options) do %>
  <% avatars.each do |avatar| %>
    <%= render_avatar(
      src: avatar[:src],
      alt: avatar[:alt],
      fallback: avatar[:fallback],
      size: size,
      class: item_classes
    ) %>
  <% end %>

  <% if limit && total > limit %>
    <%= render_avatar(
      fallback: "+#{total - limit}",
      size: size,
      class: "bg-muted text-muted-foreground ring-2 ring-background"
    ) %>
  <% end %>
<% end %>
