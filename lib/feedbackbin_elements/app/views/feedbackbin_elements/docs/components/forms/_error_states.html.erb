<div id="forms-error-states">

  <% content_for :preview_example, flush: true do %>

   <%# Create a User instance with validation errors for demonstration %>
   <% user_with_errors = User.new(email_address: "", password: "", username: "") %>
   <% user_with_errors.valid? %>

    <%= render_form_for(user_with_errors, url: "#", class: "w-2/3") do |form| %>
      <%= form.label :email_address %>
      <%= form.email_field :email_address, placeholder: "Enter your email" %>

      <%= form.label :password %>
      <%= form.password_field :password, placeholder: "Enter your password" %>

      <%= form.label :username %>
      <%= form.text_area :username, placeholder: "Enter your username" %>

      <%= form.submit "Submit" %>
    <% end %>
  <% end %>

  <% content_for :code_example, flush: true do %>
