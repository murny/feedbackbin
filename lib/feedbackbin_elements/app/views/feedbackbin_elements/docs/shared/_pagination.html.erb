<%# locals(prev_path: nil, prev_text: nil, next_path: nil, next_text: nil) %>

<div class="flex items-center justify-between my-6">
  <%= link_to prev_path, class: "group flex items-center gap-1.5 px-3 py-2 rounded-lg hover:bg-neutral-50 transition ease-in-out duration-200 dark:hover:bg-neutral-800/50" do %>
    <%= lucide_icon "chevron-left", class: "size-3 text-neutral-500 group-hover:-translate-x-1 transition ease-in-out transform duration-200 group-hover:text-neutral-900 dark:group-hover:text-neutral-200" %>
    <p class="font-semibold text-sm"><%= prev_text %></p>
  <% end %>
  <%= link_to next_path, class: "group flex items-center gap-1.5 px-3 py-2 rounded-lg hover:bg-neutral-50 transition ease-in-out duration-200 dark:hover:bg-neutral-800/50" do %>
    <p class="font-semibold text-sm"><%= next_text %></p>
    <%= lucide_icon "chevron-right", class: "size-3 text-neutral-500 group-hover:translate-x-1 transition ease-in-out transform duration-200 group-hover:text-neutral-900 dark:group-hover:text-neutral-200" %>
  <% end %>
</div>
